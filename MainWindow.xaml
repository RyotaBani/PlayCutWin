<Window x:Class="PlayCutWin.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="PlayCutWin"
 Width="1400"
 Height="900"
 Background="#1E1E1E">

 <Grid>
  <Grid.ColumnDefinitions>
   <ColumnDefinition Width="2*" />
   <ColumnDefinition Width="1*" />
  </Grid.ColumnDefinitions>

  <StackPanel Grid.Column="0" Margin="15">
   <TextBlock Text="Video (16:9)"
              Foreground="White"
              FontSize="16"
              Margin="0,0,0,10"/>

   <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
    <TextBox x:Name="TeamATextBox"
             Width="200"
             Margin="0,0,10,0"
             Text="Home / Our Team"
             Foreground="Gray"
             GotFocus="TeamBox_GotFocus"
             LostFocus="TeamBox_LostFocus"/>

    <TextBox x:Name="TeamBTextBox"
             Width="200"
             Text="Away / Opponent"
             Foreground="Gray"
             GotFocus="TeamBox_GotFocus"
             LostFocus="TeamBox_LostFocus"/>
   </StackPanel>

   <Border Background="Black"
           Height="500"
           CornerRadius="10">
    <TextBlock Text="Load a video to begin"
               Foreground="Gray"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
   </Border>
  </StackPanel>

  <StackPanel Grid.Column="1" Margin="15">
   <DockPanel Margin="0,0,0,10">
    <ComboBox Width="120">
     <ComboBoxItem Content="All Clips"/>
    </ComboBox>

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
     <Button Content="Import CSV" Margin="5"/>
     <Button Content="Export CSV" Margin="5"/>
     <Button Content="Export All" Margin="5"/>
     <Button Content="Load Video" Margin="5"/>
    </StackPanel>
   </DockPanel>

   <TextBlock Text="Clips"
              Foreground="White"
              Margin="0,10,0,5"/>

   <Border Background="#2A2A2A"
           Height="300"
           CornerRadius="8"/>
  </StackPanel>
 </Grid>
</Window>
