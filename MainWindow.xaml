<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play Cut"
        Width="1280" Height="720"
        MinWidth="1100" MinHeight="650"
        Background="#2B2B2B"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Left / Right = 1:1（要望） -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- LEFT -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2.1*"/>
                <RowDefinition Height="1.0*"/>
            </Grid.RowDefinitions>

            <!-- Video Panel -->
            <Border Grid.Row="0" Background="#1F1F1F" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top bar (tabs) -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Video (16:9)" Foreground="#EDEDED" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <TextBox Grid.Column="2"
                                 Height="26"
                                 VerticalContentAlignment="Center"
                                 Margin="0"
                                 Background="#303030"
                                 Foreground="#EDEDED"
                                 BorderBrush="#444"
                                 Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}"
                                 />

                        <TextBlock Grid.Column="4" Text="Team B" Foreground="#CFCFCF" VerticalAlignment="Center" />

                        <TextBox Grid.Column="6"
                                 Height="26"
                                 VerticalContentAlignment="Center"
                                 Background="#303030"
                                 Foreground="#EDEDED"
                                 BorderBrush="#444"
                                 Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}"
                                 />
                    </Grid>

                    <!-- Video area -->
                    <Border Grid.Row="1" Background="#101010" CornerRadius="10">
                        <Grid>
                            <MediaElement x:Name="Player"
                                          LoadedBehavior="Manual"
                                          UnloadedBehavior="Manual"
                                          Stretch="Uniform"
                                          MediaOpened="Player_MediaOpened"
                                          MediaEnded="Player_MediaEnded" />

                            <TextBlock x:Name="VideoHint"
                                       Text="Load video from the button →"
                                       Foreground="#9A9A9A"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Controls Panel -->
            <Border Grid.Row="1" Background="#1F1F1F" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Controls" Foreground="#EDEDED" FontWeight="SemiBold"/>

                    <!-- Timeline -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="{Binding TimelineLabel}"
                                   Foreground="#AFAFAF"
                                   FontSize="11"
                                   Margin="0,0,0,4"/>
                        <Slider x:Name="TimelineSlider"
                                Minimum="0"
                                Maximum="{Binding TimelineMax}"
                                Value="{Binding TimelineValue, Mode=TwoWay}"
                                PreviewMouseDown="Timeline_PreviewMouseDown"
                                PreviewMouseUp="Timeline_PreviewMouseUp"/>
                    </StackPanel>

                    <!-- Speed -->
                    <StackPanel Grid.Row="4" Orientation="Vertical">
                        <TextBlock Text="Playback Speed" Foreground="#AFAFAF" FontSize="11" Margin="0,0,0,6"/>
                        <UniformGrid Columns="4">
                            <RadioButton Content="0.25x" GroupName="speed" Foreground="#EDEDED"
                                         Command="{Binding SetSpeedCommand}" CommandParameter="0.25"/>
                            <RadioButton Content="0.5x" GroupName="speed" Foreground="#EDEDED"
                                         Command="{Binding SetSpeedCommand}" CommandParameter="0.5"/>
                            <!-- ✅ デフォルト 1x -->
                            <RadioButton Content="1x" GroupName="speed" Foreground="#EDEDED" IsChecked="True"
                                         Command="{Binding SetSpeedCommand}" CommandParameter="1.0"/>
                            <RadioButton Content="2x" GroupName="speed" Foreground="#EDEDED"
                                         Command="{Binding SetSpeedCommand}" CommandParameter="2.0"/>
                        </UniformGrid>
                    </StackPanel>

                    <!-- Transport -->
                    <UniformGrid Grid.Row="6" Columns="5" Margin="0,0,0,6">
                        <Button Content="-5s" Command="{Binding SeekCommand}" CommandParameter="-5"/>
                        <Button Content="-1s" Command="{Binding SeekCommand}" CommandParameter="-1"/>

                        <!-- ✅ Play/Pause icon (Segoe MDL2 Assets) -->
                        <Button Command="{Binding TogglePlayCommand}" Height="34">
                            <TextBlock Text="{Binding PlayPauseGlyph}"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>

                        <Button Content="+1s" Command="{Binding SeekCommand}" CommandParameter="1"/>
                        <Button Content="+5s" Command="{Binding SeekCommand}" CommandParameter="5"/>
                    </UniformGrid>

                    <!-- Clip range -->
                    <Grid Grid.Row="7">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Clip Range" Foreground="#AFAFAF" FontSize="11"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="Clip START" Command="{Binding SetClipStartCommand}"/>
                            <Button Grid.Column="1" Content="Clip END" Command="{Binding SetClipEndCommand}"/>

                            <Button Grid.Column="3" Content="Save Team A" Command="{Binding SaveTeamACommand}"/>
                            <Button Grid.Column="4" Content="Save Team B" Command="{Binding SaveTeamBCommand}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Stretch" Background="#333"/>

        <!-- RIGHT -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Clips Panel -->
            <Border Grid.Row="0" Background="#1F1F1F" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Clips (Total)" Foreground="#EDEDED" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="2" Height="26" VerticalContentAlignment="Center"
                                  ItemsSource="{Binding ClipFilters}"
                                  SelectedItem="{Binding SelectedClipFilter}"
                                  />

                        <StackPanel Grid.Column="4" Orientation="Horizontal">
                            <Button Content="Import CSV" Margin="0,0,6,0" Command="{Binding ImportCsvCommand}"/>
                            <Button Content="Export CSV" Margin="0,0,6,0" Command="{Binding ExportCsvCommand}"/>
                            <Button Content="Export All" Margin="0,0,6,0" Command="{Binding ExportAllCommand}"/>
                            <Button Content="Load Video" Command="{Binding LoadVideoCommand}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Team A clips -->
                        <Border Grid.Column="0" Background="#161616" CornerRadius="10" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Team A Clips" Foreground="#CFCFCF" FontWeight="SemiBold"/>
                                <ListView Grid.Row="1"
                                          ItemsSource="{Binding TeamAClips}"
                                          SelectedItem="{Binding SelectedTeamAClip, Mode=TwoWay}"
                                          MouseDoubleClick="TeamAClips_MouseDoubleClick"
                                          Margin="0,6,0,0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartLabel}" Width="90"/>
                                            <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndLabel}" Width="90"/>
                                            <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsLabel}" Width="160"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                        <!-- Team B clips -->
                        <Border Grid.Column="2" Background="#161616" CornerRadius="10" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Team B Clips" Foreground="#CFCFCF" FontWeight="SemiBold"/>
                                <ListView Grid.Row="1"
                                          ItemsSource="{Binding TeamBClips}"
                                          SelectedItem="{Binding SelectedTeamBClip, Mode=TwoWay}"
                                          MouseDoubleClick="TeamBClips_MouseDoubleClick"
                                          Margin="0,6,0,0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartLabel}" Width="90"/>
                                            <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndLabel}" Width="90"/>
                                            <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsLabel}" Width="160"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tags Panel -->
            <Border Grid.Row="2" Background="#1F1F1F" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tags" Foreground="#EDEDED" FontWeight="SemiBold"/>
                        <Button Grid.Column="1" Content="Preferences..." Command="{Binding PreferencesCommand}"/>
                    </Grid>

                    <ScrollViewer Grid.Row="2">
                        <StackPanel>
                            <TextBlock Text="Offense Tags" Foreground="#AFAFAF" FontSize="11" Margin="0,0,0,6"/>
                            <WrapPanel>
                                <ToggleButton Content="Transition" Margin="0,0,6,6"/>
                                <ToggleButton Content="Set" Margin="0,0,6,6"/>
                                <ToggleButton Content="PnR" Margin="0,0,6,6"/>
                                <ToggleButton Content="BLOB" Margin="0,0,6,6"/>
                                <ToggleButton Content="SLOB" Margin="0,0,6,6"/>
                                <ToggleButton Content="vs M/M" Margin="0,0,6,6"/>
                                <ToggleButton Content="vs Zone" Margin="0,0,6,6"/>
                                <ToggleButton Content="2nd Attack" Margin="0,0,6,6"/>
                                <ToggleButton Content="3rd Attack more" Margin="0,0,6,6"/>
                            </WrapPanel>

                            <TextBlock Text="Defense Tags" Foreground="#AFAFAF" FontSize="11" Margin="0,10,0,6"/>
                            <WrapPanel>
                                <ToggleButton Content="M/M" Margin="0,0,6,6"/>
                                <ToggleButton Content="Zone" Margin="0,0,6,6"/>
                                <ToggleButton Content="Rebound" Margin="0,0,6,6"/>
                                <ToggleButton Content="Steal" Margin="0,0,6,6"/>
                            </WrapPanel>

                            <TextBlock Text="Custom Tag" Foreground="#AFAFAF" FontSize="11" Margin="0,10,0,6"/>
                            <DockPanel>
                                <TextBox Height="26" VerticalContentAlignment="Center" Background="#303030" Foreground="#EDEDED" BorderBrush="#444"/>
                                <Button Content="Add" Margin="6,0,0,0" Width="70"/>
                                <Button Content="Clear" Margin="6,0,0,0" Width="70"/>
                            </DockPanel>

                            <TextBlock Text="Current Tags" Foreground="#AFAFAF" FontSize="11" Margin="0,10,0,0"/>
                            <TextBlock Text="(No tags selected)" Foreground="#7F7F7F" FontSize="11"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
