<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayCutWin"
        Height="900"
        Width="1500"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Video (16:9)"
                       Foreground="White"
                       FontSize="18"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Team A" Foreground="Gray"/>
                    <TextBox Width="200"
                             Background="#2A2A2A"
                             Foreground="White"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Team B" Foreground="Gray"/>
                    <TextBox Width="200"
                             Background="#2A2A2A"
                             Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <Border Background="#2A2A2A"
                    CornerRadius="10"
                    Height="450"
                    HorizontalAlignment="Stretch">
                <TextBlock Text="Load video to begin"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

        </StackPanel>

        <!-- RIGHT PANEL -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,10">

                <ComboBox Width="120"
                          Background="#2A2A2A"
                          Foreground="White">
                    <ComboBoxItem Content="All Clips"/>
                </ComboBox>

                <Button Content="Import CSV"
                        Margin="10,0"
                        Background="#2A2A2A"
                        Foreground="White"/>

                <Button Content="Export CSV"
                        Margin="10,0"
                        Background="#2A2A2A"
                        Foreground="White"/>

                <Button Content="Export All"
                        Margin="10,0"
                        Background="#2A2A2A"
                        Foreground="White"/>

                <Button Content="Load Video"
                        Margin="10,0"
                        Background="#007ACC"
                        Foreground="White"/>
            </StackPanel>

            <Border Background="#2A2A2A"
                    CornerRadius="10"
                    Height="600"/>
        </StackPanel>

    </Grid>
</Window>
