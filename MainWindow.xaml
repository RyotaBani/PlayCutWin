<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PlayCutWin.Views"
        mc:Ignorable="d"
        Title="PlayCutWin"
        Width="1400" Height="900"
        MinWidth="1200" MinHeight="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <!-- 2x2 layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Left Top: Player area (Phase2: MediaElement/PlayerViewをここに置く) -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Padding="10" Margin="0,0,6,6">
            <Grid>
                <TextBlock Text="Player Area (Phase2: PlayerView / MediaElement)"
                           Foreground="#BFBFBF"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="16"/>
            </Grid>
        </Border>

        <!-- Left Bottom: Player controls area (Phase2: 再生/Seek/ClipStartEndなど) -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Padding="10" Margin="0,6,6,0">
            <Grid>
                <TextBlock Text="Player Controls (Phase2)"
                           Foreground="#BFBFBF"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="16"/>
            </Grid>
        </Border>

        <!-- Right Top: Clips -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Padding="0" Margin="6,0,0,6">
            <views:ClipsView />
        </Border>

        <!-- Right Bottom: Tags -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Padding="0" Margin="6,6,0,0">
            <views:TagsView />
        </Border>

    </Grid>
</Window>
