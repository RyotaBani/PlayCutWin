<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PlayCutWin.Views"
        Title="PlayCut (Windows)"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#111111">

    <Window.Resources>
        <!-- 左メニューの見た目 -->
        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="#2A2A2A"
                                BorderThickness="1"
                                Opacity="0.95">
                            <ContentPresenter Margin="4,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1D1D1D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 右側の ContentControl に表示する View を登録 -->
        <DataTemplate x:Key="DashboardTemplate">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate x:Key="ClipsTemplate">
            <views:ClipsView/>
        </DataTemplate>
        <DataTemplate x:Key="TagsTemplate">
            <views:TagsView/>
        </DataTemplate>
        <DataTemplate x:Key="ExportsTemplate">
            <views:ExportsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Top bar -->
            <RowDefinition Height="*"/>    <!-- Body -->
            <RowDefinition Height="28"/>   <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#1B1B1B" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="True" Margin="12,0">
                <TextBlock Text="PlayCut"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Content="Import Video" Margin="0,0,8,0" Padding="12,6" Click="ImportVideo_Click"/>
                    <Button Content="Export Clip"  Margin="0,0,8,0" Padding="12,6" Click="ExportClip_Click"/>
                    <Button Content="Settings"     Padding="12,6" Click="Settings_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/> <!-- Left menu -->
                <ColumnDefinition Width="*"/>   <!-- Main -->
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Border Grid.Column="0" Background="#151515" BorderBrush="#2A2A2A" BorderThickness="0,0,1,0">
                <StackPanel Margin="12">
                    <TextBlock Text="Library" Foreground="#BFBFBF" FontSize="12" Margin="0,0,0,8"/>

                    <ListBox x:Name="MenuList" SelectionChanged="MenuList_SelectionChanged">
                        <ListBoxItem Content="Dashboard" Tag="Dashboard"/>
                        <ListBoxItem Content="Clips"     Tag="Clips"/>
                        <ListBoxItem Content="Tags"      Tag="Tags"/>
                        <ListBoxItem Content="Exports"   Tag="Exports"/>
                    </ListBox>

                    <Separator Margin="0,14,0,14" Background="#2A2A2A"/>

                    <TextBlock Text="Project" Foreground="#BFBFBF" FontSize="12" Margin="0,0,0,8"/>
                    <TextBlock Text="PlayCutWin" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Windows build / skeleton UI" Foreground="#9A9A9A" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Area -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="PageTitle"
                           Text="Dashboard"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <!-- ここに View を差し替えて表示 -->
                <ContentControl x:Name="MainContent"
                                Grid.Row="1"
                                ContentTemplate="{StaticResource DashboardTemplate}"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#141414" BorderBrush="#2A2A2A" BorderThickness="0,1,0,0">
            <DockPanel Margin="12,0" LastChildFill="True">
                <TextBlock x:Name="StatusText"
                           Text="Ready"
                           Foreground="#BFBFBF"
                           VerticalAlignment="Center"/>
                <TextBlock Text="PlayCutWin"
                           Foreground="#6F6F6F"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
