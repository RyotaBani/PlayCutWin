<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PlayCutWin"
        Width="1380" Height="860"
        Background="#151515"
        Foreground="#EAEAEA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- ===== Watermark TextBox (placeholder) ===== -->
        <Style x:Key="WatermarkTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Background" Value="#262626"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"/>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>

                            <!-- placeholder -->
                            <TextBlock Margin="{TemplateBinding Padding}"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#8C8C8C"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                         Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Small button ===== -->
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource SmallButton}">
            <Setter Property="Background" Value="#0A84FF"/>
            <Setter Property="BorderBrush" Value="#0A84FF"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== LEFT (Video) ===================== -->
        <Border Grid.Column="0" Background="#1B1B1B" CornerRadius="14" Padding="16" BorderBrush="#2C2C2C" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header: Title + Actions (right aligned like Mac) -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <!-- right actions -->
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource SmallButton}" Content="All Clips" Click="AllClips_Click"/>
                        <Button Style="{StaticResource SmallButton}" Content="Import CSV" Click="ImportCSV_Click"/>
                        <Button Style="{StaticResource SmallButton}" Content="Export CSV" Click="ExportCSV_Click"/>
                        <Button Style="{StaticResource SmallButton}" Content="Export All" Click="ExportAll_Click"/>
                        <Button Style="{StaticResource PrimaryButton}" Content="Load Video" Click="LoadVideo_Click"/>
                    </StackPanel>

                    <!-- left header block (2 rows) -->
                    <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Width="720">
                        <TextBlock Style="{StaticResource SectionTitle}"
                                   Text="{Binding VideoPanelTitle}"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,6"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Team A" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.85"/>
                            <TextBox Width="220" Height="28"
                                     Style="{StaticResource WatermarkTextBox}"
                                     Tag="Home / Our Team"
                                     Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}"
                                     GotKeyboardFocus="TextBox_SelectAllOnFocus"
                                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"/>

                            <TextBlock Text="Team B" VerticalAlignment="Center" Margin="16,0,8,0" Opacity="0.85"/>
                            <TextBox Width="220" Height="28"
                                     Style="{StaticResource WatermarkTextBox}"
                                     Tag="Away / Opponent"
                                     Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}"
                                     GotKeyboardFocus="TextBox_SelectAllOnFocus"
                                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>

                <!-- Player -->
                <Border Grid.Row="1" Background="#101010" CornerRadius="14" BorderBrush="#2C2C2C" BorderThickness="1">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform" />
                        <TextBlock x:Name="VideoHint"
                                   Text="Load a video to begin"
                                   Foreground="#8C8C8C"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Timeline -->
                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding CurrentTimeText}" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="#BDBDBD"/>
                        <Slider Grid.Column="1"
                                Minimum="0"
                                Maximum="{Binding VideoDurationSeconds}"
                                Value="{Binding CurrentTimeSeconds, Mode=TwoWay}"
                                PreviewMouseDown="Timeline_PreviewMouseDown"
                                PreviewMouseUp="Timeline_PreviewMouseUp"
                                ValueChanged="Timeline_ValueChanged"/>
                        <TextBlock Grid.Column="2" Text="{Binding DurationText}" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="#BDBDBD"/>
                    </Grid>
                </StackPanel>

                <!-- Controls -->
                <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <Button Style="{StaticResource PrimaryButton}" Content="{Binding PlayPauseIcon}" Click="PlayPause_Click"/>
                        <Button x:Name="Speed025" Style="{StaticResource SmallButton}" Content="0.25x" Click="Speed025_Click"/>
                        <Button x:Name="Speed05" Style="{StaticResource SmallButton}" Content="0.5x" Click="Speed05_Click"/>
                        <Button x:Name="Speed1" Style="{StaticResource SmallButton}" Content="1x" Click="Speed1_Click"/>
                        <Button x:Name="Speed2" Style="{StaticResource SmallButton}" Content="2x" Click="Speed2_Click"/>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource SmallButton}" Content="Save Team A" Click="SaveTeamA_Click"/>
                        <Button Style="{StaticResource SmallButton}" Content="Save Team B" Click="SaveTeamB_Click"/>
                        <Button Style="{StaticResource SmallButton}" Content="Delete" Click="Delete_Click"/>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>

        <!-- ===================== RIGHT (Clips & Tags) ===================== -->
        <Border Grid.Column="1" Background="#1B1B1B" CornerRadius="14" Padding="16" BorderBrush="#2C2C2C" BorderThickness="1" Margin="16,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource SectionTitle}" Text="{Binding AllClipsCountText}" Margin="0,0,0,10"/>

                <!-- Clip list -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding VisibleClips}"
                          SelectedItem="{Binding SelectedClip, Mode=TwoWay}"
                          Background="#101010"
                          BorderBrush="#2C2C2C"
                          BorderThickness="1"
                          SelectionChanged="ClipList_SelectionChanged"
                          MouseDoubleClick="ClipList_DoubleClick"
                          PreviewMouseDoubleClick="ClipList_PreviewMouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" Width="44" DisplayMemberBinding="{Binding No}"/>
                            <GridViewColumn Header="T" Width="46" DisplayMemberBinding="{Binding Team}"/>
                            <GridViewColumn Header="Start" Width="80" DisplayMemberBinding="{Binding StartText}"/>
                            <GridViewColumn Header="End" Width="80" DisplayMemberBinding="{Binding EndText}"/>
                            <GridViewColumn Header="Tags" Width="240" DisplayMemberBinding="{Binding TagsText}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Notes -->
                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <TextBlock Text="Clip Note" Foreground="#BDBDBD" Margin="0,0,0,6"/>
                    <TextBox Height="70"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="(note for selected clip)"
                             Text="{Binding SelectedClip.Comment, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="Set Play (only when Set tag exists)" Foreground="#BDBDBD" Margin="0,0,0,6"/>
                        <TextBox Height="28"
                                 Style="{StaticResource WatermarkTextBox}"
                                 Tag="Set Play name"
                                 Text="{Binding SelectedClip.SetPlay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
