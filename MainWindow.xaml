<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Play Cut"
        Width="1400" Height="820"
        MinWidth="1280" MinHeight="720"
        WindowStartupLocation="CenterScreen"
        Background="#202020">

    <Grid Margin="12">
        <!-- 左右 50:50 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="620"/>
            <ColumnDefinition Width="*" MinWidth="620"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== Left ===================== -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <!-- Macっぽく：上(映像)大、下(Controls)小 -->
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Video -->
            <Border Grid.Row="0" CornerRadius="12" Background="#2A2A2A" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Video (16:9)" Foreground="#DDDDDD" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <TextBox x:Name="TeamATextBox" Grid.Column="1"
                                 Margin="10,0,10,0" Height="26"
                                 VerticalContentAlignment="Center"
                                 Background="#333" Foreground="#EEE"
                                 BorderBrush="#444" />

                        <TextBlock Grid.Column="2" Text="Team B" Foreground="#BBBBBB" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="TeamBTextBox" Grid.Column="3"
                                 Height="26" VerticalContentAlignment="Center"
                                 Background="#333" Foreground="#EEE"
                                 BorderBrush="#444" />
                    </Grid>

                    <!-- Player -->
                    <Border Grid.Row="1" CornerRadius="10" Background="#111" ClipToBounds="True">
                        <Grid>
                            <MediaElement x:Name="Player"
                                          LoadedBehavior="Manual"
                                          UnloadedBehavior="Manual"
                                          Stretch="Uniform"
                                          MediaOpened="Player_MediaOpened"
                                          MediaEnded="Player_MediaEnded"
                                          MediaFailed="Player_MediaFailed"/>

                            <!-- Hint overlay -->
                            <TextBlock x:Name="VideoHint"
                                       Text="Load video from the button →"
                                       Foreground="#888"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Controls -->
            <Border Grid.Row="1" CornerRadius="12" Background="#2A2A2A" Padding="12" Margin="0,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Controls" Foreground="#DDDDDD" FontWeight="SemiBold"/>

                    <!-- Timeline -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Load a video to show the timeline slider here."
                                   Foreground="#999" FontSize="12" Margin="0,0,0,6"/>
                        <Slider x:Name="TimelineSlider"
                                Minimum="0" Maximum="1" Value="0"
                                Height="22"
                                ValueChanged="TimelineSlider_ValueChanged"/>
                    </StackPanel>

                    <!-- Playback -->
                    <StackPanel Grid.Row="2" Margin="0,12,0,0">
                        <TextBlock Text="Playback Speed" Foreground="#BBBBBB" FontSize="12" Margin="0,0,0,6"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="Speed025Button" Content="0.25x" Width="70" Margin="0,0,8,0" Click="Speed025_Click"/>
                            <Button x:Name="Speed05Button"  Content="0.5x"  Width="70" Margin="0,0,8,0" Click="Speed05_Click"/>
                            <Button x:Name="Speed1Button"   Content="1x"    Width="70" Margin="0,0,8,0" Click="Speed1_Click"/>
                            <Button x:Name="Speed2Button"   Content="2x"    Width="70" Click="Speed2_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="SeekMinus5Button" Content="-5s" Width="70" Margin="0,0,8,0" Click="SeekMinus5_Click"/>
                            <Button x:Name="SeekMinus1Button" Content="-1s" Width="70" Margin="0,0,8,0" Click="SeekMinus1_Click"/>
                            <Button x:Name="PlayPauseButton"  Content="Play" Width="70" Margin="0,0,8,0" Click="PlayPause_Click"/>
                            <Button x:Name="SeekPlus1Button"  Content="+1s" Width="70" Margin="0,0,8,0" Click="SeekPlus1_Click"/>
                            <Button x:Name="SeekPlus5Button"  Content="+5s" Width="70" Click="SeekPlus5_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Clip Range -->
                    <StackPanel Grid.Row="3" Margin="0,12,0,0">
                        <TextBlock Text="Clip Range" Foreground="#BBBBBB" FontSize="12" Margin="0,0,0,6"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ClipStartButton" Content="Clip START" Width="90" Margin="0,0,8,0" Click="ClipStart_Click"/>
                            <Button x:Name="ClipEndButton"   Content="Clip END"   Width="90" Margin="0,0,16,0" Click="ClipEnd_Click"/>
                            <Button x:Name="SaveTeamAButton" Content="Save Team A" Width="110" Margin="0,0,8,0" Click="SaveTeamA_Click"/>
                            <Button x:Name="SaveTeamBButton" Content="Save Team B" Width="110" Click="SaveTeamB_Click"/>
                        </StackPanel>

                        <TextBlock x:Name="StatusText"
                                   Text="Ready"
                                   Foreground="#AAAAAA"
                                   FontSize="12"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ===================== Right ===================== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar (ボタン列が切れないように Window MinWidth を確保してる) -->
            <Border Grid.Row="0" CornerRadius="12" Background="#2A2A2A" Padding="10">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Clips (Total 0)"
                               Foreground="#DDDDDD" FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"
                               Margin="0,0,10,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <ComboBox x:Name="FilterComboBox" Width="120" Height="26" Margin="0,0,8,0">
                            <ComboBoxItem Content="All Clips" IsSelected="True"/>
                        </ComboBox>

                        <Button x:Name="ImportCsvButton" Content="Import CSV" Width="88" Height="26" Margin="0,0,8,0" Click="ImportCsv_Click"/>
                        <Button x:Name="ExportCsvButton" Content="Export CSV" Width="88" Height="26" Margin="0,0,8,0" Click="ExportCsv_Click"/>
                        <Button x:Name="ExportAllButton" Content="Export All" Width="88" Height="26" Margin="0,0,8,0" Click="ExportAll_Click"/>
                        <Button x:Name="LoadVideoButton" Content="Load Video" Width="92" Height="26" Click="LoadVideo_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Lists + Tags -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <!-- Clips lists -->
                <Border Grid.Row="0" CornerRadius="12" Background="#2A2A2A" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Team A Clips (0)" Foreground="#DDDDDD" Margin="0,0,0,6"/>
                            <ListView x:Name="TeamAList" Height="Auto">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Start" Width="80" DisplayMemberBinding="{Binding Start}"/>
                                        <GridViewColumn Header="End"   Width="80" DisplayMemberBinding="{Binding End}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <TextBlock Text="Tag Stats: No clips yet." Foreground="#888" FontSize="12" Margin="0,8,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Team B Clips (0)" Foreground="#DDDDDD" Margin="0,0,0,6"/>
                            <ListView x:Name="TeamBList" Height="Auto">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Start" Width="80" DisplayMemberBinding="{Binding Start}"/>
                                        <GridViewColumn Header="End"   Width="80" DisplayMemberBinding="{Binding End}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tags -->
                <Border Grid.Row="1" CornerRadius="12" Background="#2A2A2A" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0">
                            <TextBlock Text="Tags" Foreground="#DDDDDD" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                            <Button Content="Preferences..." DockPanel.Dock="Right" Height="26" Width="110" Click="Preferences_Click"/>
                        </DockPanel>

                        <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Offense Tags" Foreground="#BBBBBB" FontSize="12" Margin="0,0,0,6"/>
                                <WrapPanel>
                                    <Button Content="Transition" Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="Set"        Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="PnR"        Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="BLOB"       Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="SLOB"       Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="vs M/M"     Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="vs Zone"    Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="2nd Attack" Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="3rd Attack more" Margin="0,0,8,8" Width="120" Click="Tag_Click"/>
                                </WrapPanel>

                                <TextBlock Text="Defense Tags" Foreground="#BBBBBB" FontSize="12" Margin="0,10,0,6"/>
                                <WrapPanel>
                                    <Button Content="M/M"     Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="Zone"    Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="Rebound" Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                    <Button Content="Steal"   Margin="0,0,8,8" Width="96" Click="Tag_Click"/>
                                </WrapPanel>

                                <TextBlock Text="Custom Tag" Foreground="#BBBBBB" FontSize="12" Margin="0,10,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="CustomTagTextBox"
                                             Height="26"
                                             VerticalContentAlignment="Center"
                                             Background="#333" Foreground="#EEE"
                                             BorderBrush="#444"/>

                                    <Button Grid.Column="1" Content="Add" Height="26" Margin="8,0,0,0" Click="AddCustomTag_Click"/>
                                    <Button Grid.Column="2" Content="Clear" Height="26" Margin="8,0,0,0" Click="ClearCustomTag_Click"/>
                                </Grid>

                                <TextBlock Text="Current Tags" Foreground="#BBBBBB" FontSize="12" Margin="0,12,0,6"/>
                                <TextBlock x:Name="CurrentTagsText" Text="(No tags selected)"
                                           Foreground="#888" FontSize="12"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
