<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PlayCutWin.Views"
        Title="PlayCut (Windows)"
        Width="1280" Height="760"
        MinWidth="1100" MinHeight="680"
        Background="#111">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Margin="12,10,12,8">
            <TextBlock Text="PlayCut" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Import Video" Width="110" Margin="6,0" Click="ImportVideo_Click"/>
                <Button Content="Export Clip" Width="110" Margin="6,0" Click="GoExports_Click"/>
                <Button Content="Settings" Width="90" Margin="6,0" Click="Settings_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Main -->
        <Grid Grid.Row="1" Margin="12,0,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left menu -->
            <Border Grid.Column="0" Background="#0F0F0F" CornerRadius="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Library" Foreground="#BDBDBD" FontWeight="SemiBold" Margin="4,0,0,8"/>

                    <Button Content="Dashboard" Margin="0,2" Click="GoDashboard_Click"/>
                    <Button Content="Clips" Margin="0,2" Click="GoClips_Click"/>
                    <Button Content="Tags" Margin="0,2" Click="GoTags_Click"/>
                    <Button Content="Exports" Margin="0,2" Click="GoExports_Click"/>

                    <Separator Margin="0,12"/>

                    <TextBlock Text="Project" Foreground="#BDBDBD" FontWeight="SemiBold" Margin="4,0,0,8"/>
                    <TextBlock Text="PlayCutWin" Foreground="White" FontSize="16" FontWeight="Bold" Margin="4,0,0,2"/>
                    <TextBlock Text="Windows build / skeleton UI" Foreground="#AAAAAA" Margin="4,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Right content -->
            <Border Grid.Column="1" Background="#121212" CornerRadius="10" Margin="12,0,0,0" Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="PageTitle" Text="Dashboard" Foreground="White" FontSize="26" FontWeight="Bold" Margin="2,4,0,12"/>

                    <ContentControl x:Name="MainContent" Grid.Row="1"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#0B0B0B" Padding="10,6">
            <TextBlock Foreground="#CFCFCF" Text="{Binding StatusMessage}"/>
        </Border>
    </Grid>
</Window>
