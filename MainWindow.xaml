<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayCut (Windows)"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#111111">

    <Window.Resources>
        <!-- Simple dark theme -->
        <SolidColorBrush x:Key="Bg" Color="#111111"/>
        <SolidColorBrush x:Key="Panel" Color="#151515"/>
        <SolidColorBrush x:Key="Panel2" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="Border" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="Text" Color="#EDEDED"/>
        <SolidColorBrush x:Key="SubText" Color="#B0B0B0"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#111111"/>
            <Setter Property="Background" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1B1B1B"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" CornerRadius="6" Background="Transparent" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#242424"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Top bar -->
            <RowDefinition Height="*"/>    <!-- Body -->
            <RowDefinition Height="28"/>   <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#1B1B1B" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="True" Margin="12,0">
                <TextBlock Text="PlayCut"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Content="Import Video" Margin="0,0,8,0" Click="ImportVideo_Click"/>
                    <Button Content="Export Clip"  Margin="0,0,8,0" Click="ExportClip_Click"/>
                    <Button Content="Settings"     Click="Settings_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/> <!-- Left menu -->
                <ColumnDefinition Width="*"/>   <!-- Main -->
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Border Grid.Column="0" Background="#151515" BorderBrush="#2A2A2A" BorderThickness="0,0,1,0">
                <StackPanel Margin="12">
                    <TextBlock Text="Library" Foreground="#BFBFBF" FontSize="12" Margin="0,0,0,8"/>
                    <ListBox x:Name="MenuList" SelectionChanged="MenuList_SelectionChanged">
                        <ListBoxItem Content="Dashboard"/>
                        <ListBoxItem Content="Clips"/>
                        <ListBoxItem Content="Tags"/>
                        <ListBoxItem Content="Exports"/>
                    </ListBox>

                    <Separator Margin="0,14,0,14" Background="#2A2A2A"/>

                    <TextBlock Text="Project" Foreground="#BFBFBF" FontSize="12" Margin="0,0,0,8"/>
                    <TextBlock Text="PlayCutWin" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Windows build / skeleton UI" Foreground="#9A9A9A" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Area (UserControl host) -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl x:Name="ContentHost"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#141414" BorderBrush="#2A2A2A" BorderThickness="0,1,0,0">
            <DockPanel Margin="12,0" LastChildFill="True">
                <TextBlock x:Name="StatusText"
                           Text="Ready"
                           Foreground="#BFBFBF"
                           VerticalAlignment="Center"/>
                <TextBlock Text="PlayCutWin"
                           Foreground="#6F6F6F"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
