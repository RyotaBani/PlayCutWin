<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play Cut"
        Width="1600" Height="900"
        MinWidth="1400" MinHeight="820"
        Background="#0F0F0F"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#EAEAEA"/>
        <SolidColorBrush x:Key="Accent" Color="#2E7DFF"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="#1C1C1C"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="DarkButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#303030"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>

        <Style x:Key="Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <!-- ★ ここ重要：Window 全体を ScrollViewer で包まない（切れの原因） -->
    <Grid Margin="16">
        <!-- Mac版っぽい比率：左:右=3:2 / 上:下=3:2 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="820"/>
            <ColumnDefinition Width="2*" MinWidth="560"/>
        </Grid.ColumnDefinitions>

        <!-- =======================
             Top-Left: VIDEO
             ======================= -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Panel}" Margin="0,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Video (16:9)" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <ComboBox x:Name="TeamACombo" Height="28" Background="#1C1C1C" Foreground="{StaticResource TextBrush}">
                            <ComboBoxItem Content="Team A"/>
                        </ComboBox>
                        <TextBox x:Name="TeamAText" Margin="0,6,0,0" Height="28" Background="#1C1C1C" Foreground="{StaticResource TextBrush}" Text="Home / Our Team"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text=" " Margin="0,0,0,6"/>
                        <ComboBox x:Name="TeamBCombo" Height="28" Background="#1C1C1C" Foreground="{StaticResource TextBrush}">
                            <ComboBoxItem Content="Team B"/>
                        </ComboBox>
                        <TextBox x:Name="TeamBText" Margin="0,6,0,0" Height="28" Background="#1C1C1C" Foreground="{StaticResource TextBrush}" Text="Away / Opponent"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Background="#161616" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="10">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Stop"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaEnded="Player_MediaEnded"/>
                        <TextBlock Text="Load video from the button →"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- =======================
             Top-Right: CLIPS
             ======================= -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Panel}" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- タイトル -->
                <TextBlock Grid.Row="0" Text="Clips (Total 0)" Style="{StaticResource H1}" Margin="0,0,0,6"/>

                <!-- ★ここが切れ対策：左=操作群(折返し可) / 右=Load(常に表示) -->
                <Grid Grid.Row="1" Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                        <ComboBox x:Name="ClipsFilter"
                                  Width="130" Height="28"
                                  Background="#1C1C1C" Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,8,8">
                            <ComboBoxItem Content="All Clips"/>
                        </ComboBox>

                        <Button Style="{StaticResource DarkButton}" Content="Import CSV" Width="96" Click="ImportCsv_Click"/>
                        <Button Style="{StaticResource DarkButton}" Content="Export CSV" Width="96" Click="ExportCsv_Click"/>
                        <Button Style="{StaticResource DarkButton}" Content="Export All" Width="96" Click="ExportAll_Click"/>
                    </WrapPanel>

                    <Button Grid.Column="1"
                            Style="{StaticResource DarkButton}"
                            Content="Load Video"
                            Width="110" Height="28"
                            Margin="0,0,0,8"
                            Background="{StaticResource Accent}"
                            BorderBrush="{StaticResource Accent}"
                            Click="LoadVideo_Click"/>
                </Grid>

                <TextBlock Grid.Row="2" Text="{Binding LoadedVideoName}" Opacity="0.75" Margin="0,6,0,10" TextTrimming="CharacterEllipsis"/>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#161616" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="8" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Team A Clips" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ListView Grid.Row="1" ItemsSource="{Binding TeamAClips}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                        <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                        <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="220"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Background="#161616" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="8" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Team B Clips" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ListView Grid.Row="1" ItemsSource="{Binding TeamBClips}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                        <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                        <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="220"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- =======================
             Bottom-Left: CONTROLS
             ======================= -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Panel}" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Controls" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <TextBlock Text="Load a video to show the timeline slider here." Opacity="0.6"/>
                <Slider x:Name="TimelineSlider"
                        Minimum="0"
                        Maximum="{Binding DurationSeconds}"
                        Value="{Binding CurrentSeconds, Mode=TwoWay}"
                        PreviewMouseDown="TimelineSlider_PreviewMouseDown"
                        PreviewMouseUp="TimelineSlider_PreviewMouseUp"/>

                <DockPanel Margin="0,0,0,6">
                    <TextBlock Text="Playback Speed" Opacity="0.85" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TimeDisplay}" DockPanel.Dock="Right" Opacity="0.75" VerticalAlignment="Center"/>
                </DockPanel>

                <WrapPanel>
                    <Button Style="{StaticResource DarkButton}" Content="0.25x" Click="Speed025_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="0.5x" Click="Speed05_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="1x" Click="Speed1_Click" Background="{StaticResource Accent}" BorderBrush="{StaticResource Accent}"/>
                    <Button Style="{StaticResource DarkButton}" Content="2x" Click="Speed2_Click"/>
                </WrapPanel>

                <WrapPanel Margin="0,8,0,0">
                    <Button Style="{StaticResource DarkButton}" Content="-5s" Click="SeekMinus5_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="-1s" Click="SeekMinus1_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="{Binding PlayPauseLabel}" Background="{StaticResource Accent}" BorderBrush="{StaticResource Accent}" Click="PlayPause_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="+1s" Click="SeekPlus1_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="+5s" Click="SeekPlus5_Click"/>
                </WrapPanel>

                <TextBlock Text="Clip Range" FontWeight="SemiBold" Margin="0,14,0,4"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Button Style="{StaticResource DarkButton}" Content="Clip START" Click="ClipStart_Click"/>
                        <TextBlock Text="{Binding ClipStartText}" Opacity="0.75" Margin="6,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Button Style="{StaticResource DarkButton}" Content="Clip END" Click="ClipEnd_Click"/>
                        <TextBlock Text="{Binding ClipEndText}" Opacity="0.75" Margin="6,0,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource DarkButton}" Content="Save Team A" Click="SaveTeamA_Click"/>
                    <Button Grid.Column="3" Style="{StaticResource DarkButton}" Content="Save Team B" Click="SaveTeamB_Click"/>
                </Grid>

                <TextBlock Text="{Binding StatusText}" Opacity="0.75" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- =======================
             Bottom-Right: TAGS
             ======================= -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Panel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <TextBlock Text="Tags" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <Button Style="{StaticResource DarkButton}" Content="Preferences…" DockPanel.Dock="Right" IsEnabled="False"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Offense Tags" Opacity="0.85" Margin="0,8,0,0"/>
                        <ItemsControl ItemsSource="{Binding OffenseTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource DarkButton}" Content="{Binding}" Margin="0,0,8,8"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Defense Tags" Opacity="0.85" Margin="0,10,0,0"/>
                        <ItemsControl ItemsSource="{Binding DefenseTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource DarkButton}" Content="{Binding}" Margin="0,0,8,8"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Custom Tag" Opacity="0.85" Margin="0,10,0,0"/>
                        <DockPanel>
                            <TextBox x:Name="CustomTagText" Height="28" Background="#1C1C1C" Foreground="{StaticResource TextBrush}" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource DarkButton}" Content="Add" Width="70" Click="AddCustomTag_Click"/>
                            <Button Style="{StaticResource DarkButton}" Content="Clear" Width="70" Click="ClearTags_Click" Margin="0,0,0,0"/>
                        </DockPanel>

                        <TextBlock Text="Current Tags" Opacity="0.85" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding CurrentTagsText}" Opacity="0.75"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
