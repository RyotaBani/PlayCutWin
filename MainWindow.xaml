<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PlayCutWin.Views"
        Title="PlayCutWin"
        Width="1400"
        Height="900"
        MinWidth="1200"
        MinHeight="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />   <!-- 上段 -->
            <RowDefinition Height="Auto"/> <!-- 下段 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" /> <!-- 左 -->
            <ColumnDefinition Width="*" />  <!-- 右 -->
        </Grid.ColumnDefinitions>

        <!-- 左上：Player -->
        <Border Grid.Row="0" Grid.Column="0" Margin="4">
            <views:PlayerView />
        </Border>

        <!-- 右上：Clips -->
        <Border Grid.Row="0" Grid.Column="1" Margin="4">
            <views:ClipsView />
        </Border>

        <!-- 左下：Player Controls -->
        <Border Grid.Row="1" Grid.Column="0" Margin="4">
            <views:PlayerControlsView />
        </Border>

        <!-- 右下：Tags -->
        <Border Grid.Row="1" Grid.Column="1" Margin="4">
            <views:TagsView />
        </Border>
    </Grid>
</Window>
