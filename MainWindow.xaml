<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PlayCutWin.Views"
        mc:Ignorable="d"
        Title="PlayCutWin"
        Width="1400" Height="900"
        MinWidth="1200" MinHeight="800"
        WindowStartupLocation="CenterScreen"
        Background="#111"
        Focusable="True"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 左上：Player -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Margin="0,0,6,6">
            <views:PlayerView />
        </Border>

        <!-- 左下：Controls -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Margin="0,6,6,0">
            <views:PlayerControlsView />
        </Border>

        <!-- 右上：Clips -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Margin="6,0,0,6">
            <views:ClipsView />
        </Border>

        <!-- 右下：Tags -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#1E1E1E"
                BorderBrush="#3A3A3A" BorderThickness="1"
                CornerRadius="6" Margin="6,6,0,0">
            <views:TagsView />
        </Border>
    </Grid>
</Window>
