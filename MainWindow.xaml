<Window x:Class="PlayCutWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayCutWin"
        mc:Ignorable="d"
        Title="Play Cut"
        Width="1400" Height="860"
        MinWidth="1200" MinHeight="740"
        Background="#121212"
        Foreground="#EAEAEA"
        WindowStartupLocation="CenterScreen"><Grid x:Name="RootGrid" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
                <!-- Mac版に近い見え方：左右をほぼ 1:1 にして右側（Clips/ボタン）が切れないようにする -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- =======================
             Top-Left: VIDEO
             ======================= -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Panel}" Margin="0,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Margin="0,0,0,10">
                    <TextBlock Text="Video (16:9)" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <TextBlock Text="Team A" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.85"/>
                        <TextBox Width="160" Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="Team B" VerticalAlignment="Center" Margin="8,0,8,0" Opacity="0.85"/>
                        <TextBox Width="160" Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </DockPanel>

                <Border Grid.Row="1" Background="#0F0F0F" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1">
                    <Grid>
                        <!-- Hint (コードビハインドから参照されるので必ず存在させる) -->
                        <TextBlock x:Name="VideoHint"
                                   Text="Load a video to start"
                                   Foreground="#8A8A8A"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!-- Player -->
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed"
                                      />
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- =======================
             Top-Right: CLIPS
             ======================= -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Panel}" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <TextBlock Text="{Binding ClipsHeader}" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <ComboBox Width="140"
                                  ItemsSource="{Binding ClipFilters}"
                                  SelectedItem="{Binding SelectedClipFilter}"/>
                        <Button Style="{StaticResource DarkButton}" Content="Delete" Click="DeleteSelectedClip_Click" IsEnabled="{Binding HasSelectedClip}"/>
                        <Button Style="{StaticResource DarkButton}" Content="Import CSV" Click="ImportCsv_Click"/>
                        <Button Style="{StaticResource DarkButton}" Content="Export CSV" Click="ExportCsv_Click"/>
                        <Button Style="{StaticResource DarkButton}" Content="Export All" Click="ExportAll_Click"/>
                        <Button Style="{StaticResource DarkButton}" Content="Load Video" Background="{StaticResource Accent}" BorderBrush="{StaticResource Accent}" Click="LoadVideo_Click"/>
                    </StackPanel>
                </DockPanel>

                <TextBlock Grid.Row="1" Text="{Binding LoadedVideoName}" Opacity="0.75" Margin="0,8,0,10" TextTrimming="CharacterEllipsis"/>

                <Grid Grid.Row="2">
                    <Border Background="#161616" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="8" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Clips" FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <!-- All Clips: Team A / Team B split -->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedClipFilter}" Value="All Clips">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Team A -->
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Team A Clips" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <ListView Grid.Row="1"
                                                  ItemsSource="{Binding TeamAView}"
                                                  SelectionChanged="ClipList_SelectionChanged"
                                                  MouseDoubleClick="ClipList_DoubleClick"
                                                  Style="{StaticResource DarkListView}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Team}" Width="50"/>
                                                    <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                                    <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                                    <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="280"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>

                                    <!-- Team B -->
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Team B Clips" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <ListView Grid.Row="1"
                                                  ItemsSource="{Binding TeamBView}"
                                                  SelectionChanged="ClipList_SelectionChanged"
                                                  MouseDoubleClick="ClipList_DoubleClick"
                                                  Style="{StaticResource DarkListView}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Team}" Width="50"/>
                                                    <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                                    <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                                    <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="280"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>
                                </Grid>

                                <!-- Team A only -->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedClipFilter}" Value="Team A">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <ListView ItemsSource="{Binding TeamAView}"
                                              SelectionChanged="ClipList_SelectionChanged"
                                              MouseDoubleClick="ClipList_DoubleClick"
                                              Style="{StaticResource DarkListView}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Team}" Width="60"/>
                                                <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                                <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                                <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="360"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>

                                <!-- Team B only -->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedClipFilter}" Value="Team B">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <ListView ItemsSource="{Binding TeamBView}"
                                              SelectionChanged="ClipList_SelectionChanged"
                                              MouseDoubleClick="ClipList_DoubleClick"
                                              Style="{StaticResource DarkListView}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Team}" Width="60"/>
                                                <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartText}" Width="70"/>
                                                <GridViewColumn Header="End" DisplayMemberBinding="{Binding EndText}" Width="70"/>
                                                <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsText}" Width="360"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                            </Grid>

                            <!-- Selected Clip Note (Mac-like) -->
                            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                                <TextBlock Text="Clip Note" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <TextBox Height="56"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         IsEnabled="{Binding HasSelectedClip}"
                                         Text="{Binding SelectedClip.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#0F0F0F"
                                         Foreground="#EAEAEA"
                                         BorderBrush="#2A2A2A"
                                         BorderThickness="1"
                                         Padding="8"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- =======================
             Bottom-Left: CONTROLS
             ======================= -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Panel}" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Controls" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <TextBlock Text="Load a video to show the timeline slider here." Opacity="0.6"/>
                <Slider x:Name="TimelineSlider"
                        Minimum="0"
                        Maximum="{Binding DurationSeconds}"
                        Value="{Binding CurrentSeconds, Mode=TwoWay}"
                        PreviewMouseDown="TimelineSlider_PreviewMouseDown"
                        PreviewMouseUp="TimelineSlider_PreviewMouseUp"/>

                <DockPanel Margin="0,0,0,6">
                    <TextBlock Text="Playback Speed" Opacity="0.85" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TimeDisplay}" DockPanel.Dock="Right" Opacity="0.75" VerticalAlignment="Center"/>
                </DockPanel>

                <WrapPanel>
                    <Button x:Name="Speed025Button" Style="{StaticResource DarkButton}" Content="0.25x" Click="Speed025_Click"/>
                    <Button x:Name="Speed05Button"  Style="{StaticResource DarkButton}" Content="0.5x"  Click="Speed05_Click"/>
                    <Button x:Name="Speed1Button"   Style="{StaticResource DarkButton}" Content="1x"    Click="Speed1_Click"/>
                    <Button x:Name="Speed2Button"   Style="{StaticResource DarkButton}" Content="2x"    Click="Speed2_Click"/>
                </WrapPanel>

                <WrapPanel Margin="0,8,0,0">
                    <Button Style="{StaticResource DarkButton}" Content="-5s" Click="SeekMinus5_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="-1s" Click="SeekMinus1_Click"/>
                    <!-- Play/Pause は文字ではなくアイコン（Segoe MDL2 Assets） -->
                    <Button Style="{StaticResource DarkButton}" Content="{Binding PlayPauseIcon}"
                            FontFamily="Segoe MDL2 Assets" FontSize="18"
                            Background="{StaticResource Accent}" BorderBrush="{StaticResource Accent}"
                            Click="PlayPause_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="+1s" Click="SeekPlus1_Click"/>
                    <Button Style="{StaticResource DarkButton}" Content="+5s" Click="SeekPlus5_Click"/>
                </WrapPanel>

                <TextBlock Text="Clip Range" FontWeight="SemiBold" Margin="0,14,0,4"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Button Style="{StaticResource DarkButton}" Content="Clip START" Click="ClipStart_Click"/>
                        <TextBlock Text="{Binding ClipStartText}" Opacity="0.75" Margin="6,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Button Style="{StaticResource DarkButton}" Content="Clip END" Click="ClipEnd_Click"/>
                        <TextBlock Text="{Binding ClipEndText}" Opacity="0.75" Margin="6,0,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource DarkButton}" Content="Save Team A" Click="SaveTeamA_Click"/>
                    <Button Grid.Column="3" Style="{StaticResource DarkButton}" Content="Save Team B" Click="SaveTeamB_Click"/>
                </Grid>

                <TextBlock Text="{Binding StatusText}" Opacity="0.75" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- =======================
             Bottom-Right: TAGS
             ======================= -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Panel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <TextBlock Text="Tags" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <Button Style="{StaticResource DarkButton}" Content="Preferences…" DockPanel.Dock="Right" IsEnabled="False"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Offense Tags" Opacity="0.85" Margin="0,8,0,0"/>
                        <ItemsControl ItemsSource="{Binding OffenseTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ToggleButton Style="{StaticResource OffenseTagToggle}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Defense Tags" Opacity="0.85" Margin="0,12,0,0"/>
                        <ItemsControl ItemsSource="{Binding DefenseTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ToggleButton Style="{StaticResource DefenseTagToggle}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Custom Tag" Opacity="0.85" Margin="0,14,0,0"/>
                        <DockPanel Margin="0,6,0,0">
                            <TextBox DockPanel.Dock="Left" Width="260" Text="{Binding CustomTagInput, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Style="{StaticResource DarkButton}" Content="Add" Click="AddCustomTag_Click"/>
                            <Button Style="{StaticResource DarkButton}" Content="Clear" Click="ClearTags_Click"/>
                        </DockPanel>

                        <TextBlock Text="Current Tags" Opacity="0.85" Margin="0,14,0,0"/>
                        <TextBlock Text="{Binding CurrentTagsText}" Opacity="0.8" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
