<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <!-- VLC (WPF) -->
    <PackageReference Include="LibVLCSharp" Version="3.9.5.1" />
    <PackageReference Include="LibVLCSharp.WPF" Version="3.9.5.1" />

    <!-- IMPORTANT:
         GitHub Actions のエラー原因：
         LibVLCSharp.NativeAssets.Win64 / Win32 が NuGet 側に存在せず restore で落ちる。
         Windows 用はこのパッケージ1つにまとめる。
         3.0.* は “3.0 系の最新パッチ” を拾う floating version。
    -->
    <PackageReference Include="LibVLCSharp.NativeAssets.Windows" Version="3.0.*" />
  </ItemGroup>

</Project>
