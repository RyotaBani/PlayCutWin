<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <!-- VLC / LibVLCSharp -->
    <!-- IMPORTANT: NuGet has LibVLCSharp 3.9.5 (no ".1").
         If you reference 3.9.5.1, GitHub Actions "dotnet restore" fails with NU1102. -->
    <PackageReference Include="LibVLCSharp" Version="3.9.5" />
    <PackageReference Include="LibVLCSharp.WPF" Version="3.9.5" />

    <!-- Native VLC binaries for Windows (needed for CI / self-contained builds) -->
    <PackageReference Include="LibVLCSharp.NativeAssets.Windows" Version="3.0.*" />
  </ItemGroup>

</Project>
