<UserControl x:Class="PlayCutWin.Views.PlayerControlsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Controls"
                   Foreground="#EEE"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <!-- Play / Pause / Stop + Seek -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="Play" Width="80" Margin="0,0,8,0" Click="Play_Click"/>
            <Button Content="Pause" Width="80" Margin="0,0,8,0" Click="Pause_Click"/>
            <Button Content="Stop" Width="80" Margin="0,0,16,0" Click="Stop_Click"/>

            <Button Content="-0.5s" Width="80" Margin="0,0,8,0" Click="Minus05_Click"/>
            <Button Content="+0.5s" Width="80" Margin="0,0,16,0" Click="Plus05_Click"/>

            <TextBlock Text="{Binding PlaybackPositionText}" Foreground="#DDD" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Text=" / " Foreground="#777" FontSize="16" VerticalAlignment="Center" Margin="6,0"/>
            <TextBlock Text="{Binding PlaybackDurationText}" Foreground="#777" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Range -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <Button Content="START" Width="90" Margin="0,0,8,0" Click="SetStart_Click"/>
            <Button Content="END" Width="90" Margin="0,0,8,0" Click="SetEnd_Click"/>
            <Button Content="Reset" Width="90" Margin="0,0,16,0" Click="ResetRange_Click"/>

            <TextBlock Text="{Binding ClipStart, StringFormat=Start {0:F1}s}" Foreground="#DDD" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ClipEnd, StringFormat=End {0:F1}s}" Foreground="#DDD" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
