<UserControl x:Class="PlayCutWin.Views.PlayerControlsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Style="{StaticResource PanelBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Controls" Style="{StaticResource H1}"/>

            <!-- Playback Speed -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <TextBlock Text="Playback Speed" Style="{StaticResource Small}" Margin="0,0,0,6"/>

                <UniformGrid Columns="4" HorizontalAlignment="Left">
                    <Button Content="0.25x" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Rate025_Click"/>
                    <Button Content="0.5x"  Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Rate05_Click"/>
                    <Button Content="1x"    Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Rate1_Click"/>
                    <Button Content="2x"    Style="{StaticResource TopButton}" Click="Rate2_Click"/>
                </UniformGrid>
            </StackPanel>

            <!-- Seek + Play/Pause -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="-5s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekMinus5_Click"/>
                <Button Grid.Column="1" Content="-1s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekMinus1_Click"/>

                <!-- ★ここがPlay/Pause：他と同じStyle/同じHeight/同じMinWidthに統一 -->
                <Button x:Name="PlayPauseButton"
                        Grid.Column="2"
                        Style="{StaticResource TopButton}"
                        Margin="0,0,8,0"
                        Click="PlayPause_Click"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>

                <Button Grid.Column="3" Content="+1s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekPlus1_Click"/>
                <Button Grid.Column="4" Content="+5s" Style="{StaticResource TopButton}" Click="SeekPlus5_Click"/>

                <TextBlock Grid.Column="6"
                           VerticalAlignment="Center"
                           Style="{StaticResource H2}"
                           Text="{Binding PositionText}"
                           Margin="0,0,6,0"/>

                <TextBlock Grid.Column="6"
                           VerticalAlignment="Center"
                           Style="{StaticResource Small}"
                           Text="{Binding DurationText}"
                           Margin="70,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
