<UserControl x:Class="PlayCutWin.Views.PlayerControlsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <!-- ここが AppState の単一インスタンス -->
        <Binding Source="{x:Static local:AppState.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="CtlButton" TargetType="Button" BasedOn="{StaticResource TopButton}">
            <!-- ここで “全て同じサイズ” を保証 -->
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="76"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="{DynamicResource FontBody}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CtlAccentButton" TargetType="Button" BasedOn="{StaticResource CtlButton}">
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Playback Speed ===== -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Playback Speed"
                       Style="{StaticResource Small}"
                       Margin="0,0,0,6"/>

            <UniformGrid Columns="4" HorizontalAlignment="Left">
                <Button Content="0.25x" Style="{StaticResource CtlButton}" Click="Speed025_Click" Margin="0,0,10,0"/>
                <Button Content="0.5x"  Style="{StaticResource CtlButton}" Click="Speed05_Click"  Margin="0,0,10,0"/>
                <Button Content="1x"    Style="{StaticResource CtlAccentButton}" Click="Speed1_Click" Margin="0,0,10,0"/>
                <Button Content="2x"    Style="{StaticResource CtlButton}" Click="Speed2_Click"/>
            </UniformGrid>

            <!-- ===== Seek row + Play/Pause ===== -->
            <UniformGrid Columns="5" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="-5s" Style="{StaticResource CtlButton}" Click="SeekMinus5_Click" Margin="0,0,10,0"/>
                <Button Content="-1s" Style="{StaticResource CtlButton}" Click="SeekMinus1_Click" Margin="0,0,10,0"/>

                <!-- ✅ ここが “再生ボタン” ：サイズも他と同じ、アイコンも必ず表示 -->
                <Button Style="{StaticResource CtlAccentButton}"
                        ToolTip="{Binding PlayPauseTooltip}"
                        Click="PlayPause_Click"
                        Margin="0,0,10,0">
                    <TextBlock Text="{Binding PlayPauseGlyph}"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="{DynamicResource Text1}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>

                <Button Content="+1s" Style="{StaticResource CtlButton}" Click="SeekPlus1_Click" Margin="0,0,10,0"/>
                <Button Content="+5s" Style="{StaticResource CtlButton}" Click="SeekPlus5_Click"/>
            </UniformGrid>
        </StackPanel>

        <!-- ===== Clip Range ===== -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Clip Range" Style="{StaticResource Small}" Margin="0,0,0,8"/>

            <UniformGrid Columns="4" HorizontalAlignment="Left">
                <Button Content="Clip START" Style="{StaticResource CtlButton}" Click="ClipStart_Click" Margin="0,0,10,0"/>
                <Button Content="Clip END"   Style="{StaticResource CtlButton}" Click="ClipEnd_Click"   Margin="0,0,10,0"/>
                <Button Content="Save Team A" Style="{StaticResource CtlButton}" Click="SaveTeamA_Click" Margin="0,0,10,0"/>
                <Button Content="Save Team B" Style="{StaticResource CtlButton}" Click="SaveTeamB_Click"/>
            </UniformGrid>

            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource Small}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
