<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Exports"
                   Foreground="White"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
            <StackPanel>
                <TextBlock Text="(placeholder) Export history / settings will be here."
                           Foreground="#EDEDED"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="次はここに「書き出し履歴」「保存先」「ファイル名ルール」などを入れる。"
                           Foreground="#B0B0B0"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
