<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Exports"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="SemiBold"
                       DockPanel.Dock="Left"/>

            <Button Content="Export (dummy)"
                    DockPanel.Dock="Right"
                    Padding="14,8"
                    Click="ExportDummy_Click"/>
        </DockPanel>

        <!-- Body Card -->
        <Border Grid.Row="1"
                Background="#1A1A1A"
                CornerRadius="10"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                Padding="16">
            <StackPanel>
                <TextBlock Text="Selected video:"
                           Foreground="#BFBFBF"
                           FontSize="12"/>

                <TextBlock x:Name="SelectedVideoText"
                           Text="(none)"
                           Foreground="White"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,6,0,14"/>

                <TextBlock Text="(placeholder) ここに書き出しUIを作る / クリップ一覧・レンジ・出力形式など"
                           Foreground="#9A9A9A"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
