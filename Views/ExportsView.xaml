<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Border Background="#151515" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1" Padding="14">
            <StackPanel>
                <TextBlock Text="Exports" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="Selected video:" Foreground="#B0B0B0" FontSize="12"/>
                <TextBlock Text="{Binding SelectedVideoPath}" Foreground="White" TextWrapping="Wrap" Margin="0,6,0,12"/>

                <TextBlock Text="(placeholder) ここに書き出しUIを作る" Foreground="#8F8F8F" Margin="0,0,0,16"/>

                <Button Content="Export (dummy)" Width="200" HorizontalAlignment="Center" Click="Export_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
