<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Exports"
                   Foreground="White"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1"
                Background="#1A1A1A"
                CornerRadius="10"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                Padding="16">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Selected video:"
                           Foreground="#B0B0B0"
                           FontSize="12"/>

                <TextBlock Grid.Row="1"
                           Text="{Binding SelectedVideoPath}"
                           Foreground="#EDEDED"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>

                <ListBox Grid.Row="3"
                         ItemsSource="{Binding TagsForSelectedVideo}"
                         Background="#111111"
                         BorderBrush="#2A2A2A"
                         BorderThickness="1"
                         Foreground="White"
                         Padding="6"/>

                <Button Grid.Row="4"
                        Content="Export (dummy)"
                        Width="160"
                        Height="34"
                        HorizontalAlignment="Center"
                        Margin="0,14,0,0"
                        Click="ExportDummy_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
