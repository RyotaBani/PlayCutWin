<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Exports" Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" Background="#151515" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
            <StackPanel>
                <TextBlock Text="Selected video:" Foreground="#BFBFBF" FontSize="12"/>
                <TextBlock Text="{Binding SelectedVideoPath}" Foreground="#EDEDED" FontSize="12"
                           TextWrapping="Wrap" Margin="0,4,0,12"/>

                <TextBlock Text="(placeholder) ここに書き出しUIを作る" Foreground="#AFAFAF" FontSize="12" Margin="0,0,0,14"/>

                <Button Content="Export (dummy)" Width="160" Height="34" HorizontalAlignment="Center"
                        Click="ExportDummy_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
