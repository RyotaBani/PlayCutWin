<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Border Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
        <StackPanel>
            <TextBlock Text="Exports"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock Text="ここに書き出し履歴（ファイル名/時間/タグ/保存先など）を表示する予定。"
                       Foreground="#B0B0B0"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>

            <Border Background="#222222" CornerRadius="8" Padding="12" BorderBrush="#2A2A2A" BorderThickness="1">
                <TextBlock Text="(placeholder) export history"
                           Foreground="#AFAFAF"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
