<UserControl x:Class="PlayCutWin.Views.ExportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Border Background="#141414" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="8" Padding="14">
            <StackPanel>
                <TextBlock Text="Exports" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="Selected video:" Foreground="#B0B0B0" FontSize="12"/>
                <TextBlock x:Name="SelectedPathText"
                           Text="(none)"
                           Foreground="#EDEDED"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,4,0,12"/>

                <TextBlock Text="(placeholder) ここに書き出しUIを作る" Foreground="#9A9A9A" FontSize="12" Margin="0,0,0,18"/>

                <Button Content="Export (dummy)" Width="140" HorizontalAlignment="Center" Click="Export_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
