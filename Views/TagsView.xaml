<UserControl x:Class="PlayCutWin.Views.TagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Border Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
        <StackPanel>
            <TextBlock Text="Tags"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Selected video:"
                       Foreground="#B0B0B0"
                       FontSize="12"/>

            <TextBlock x:Name="SelectedVideoText"
                       Text="(none)"
                       Foreground="White"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,6,0,14"/>

            <TextBlock Text="（次：ここにタグ追加UIを作る）"
                       Foreground="#9A9A9A"
                       FontSize="12"/>
        </StackPanel>
    </Border>
</UserControl>
