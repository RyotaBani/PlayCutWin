<UserControl x:Class="PlayCutWin.Views.TagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#151515" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1" Padding="14">
            <StackPanel>
                <TextBlock Text="Tags" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="Selected video:" Foreground="#B0B0B0" FontSize="12"/>
                <TextBlock Text="{Binding SelectedVideoName}" Foreground="White" TextWrapping="Wrap" Margin="0,6,0,10"/>

                <DockPanel Margin="0,0,0,10">
                    <TextBlock Text="Current:" Foreground="#B0B0B0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding PlaybackTimeText}" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </DockPanel>

                <DockPanel>
                    <TextBox x:Name="TagInput" Height="28" Margin="0,0,10,0"/>
                    <Button Content="Add Tag" Width="120" Click="AddTag_Click"/>
                </DockPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" Background="#151515" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1" Padding="10">
            <DataGrid ItemsSource="{Binding Tags}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding TimeText}" Width="120"/>
                    <DataGridTextColumn Header="Tag"  Binding="{Binding Tag}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
