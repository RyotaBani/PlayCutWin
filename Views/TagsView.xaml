<UserControl x:Class="PlayCutWin.Views.TagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tags"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
            <StackPanel>
                <TextBlock Text="Selected video:"
                           Foreground="#B0B0B0"
                           FontSize="12"/>

                <TextBlock x:Name="SelectedPathText"
                           Text="(none)"
                           Foreground="White"
                           TextWrapping="Wrap"
                           Margin="0,6,0,14"/>

                <TextBlock Text="(placeholder) ここにタグUIを作る"
                           Foreground="#B0B0B0"
                           FontSize="12"
                           Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="TagInput" Width="220" Margin="0,0,8,0"/>
                    <Button Content="Add Tag (dummy)" Padding="10,6" Click="AddTag_Click"/>
                </StackPanel>

                <TextBlock x:Name="InfoText"
                           Text=""
                           Foreground="#AFAFAF"
                           FontSize="12"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
