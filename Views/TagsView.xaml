<UserControl x:Class="PlayCutWin.Views.TagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border Background="#0F0F0F" CornerRadius="12" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tags" Foreground="White" FontSize="18" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1" Margin="0,10,0,6"
                           Foreground="#BDBDBD"
                           Text="{Binding SelectedVideoPath, StringFormat=Selected video: {0}}"/>

                <DockPanel Grid.Row="2" Margin="0,8,0,10">
                    <TextBox x:Name="TagInput" Width="260" Height="28"
                             KeyDown="TagInput_KeyDown"
                             VerticalContentAlignment="Center"/>
                    <Button Content="Add Tag" Width="100" Margin="8,0,0,0" Click="AddTag_Click"/>
                    <Button Content="Delete Selected" Width="120" Margin="16,0,0,0" Click="DeleteSelected_Click"/>
                    <Button Content="Clear Selected Video Tags" Width="180" Margin="8,0,0,0" Click="ClearSelected_Click"/>
                </DockPanel>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="260"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="TagsGrid"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Tags}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeText}" Width="120"/>
                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="160"/>
                            <DataGridTextColumn Header="Video" Binding="{Binding VideoPath}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Column="1" Margin="12,0,0,0" Background="#121212" CornerRadius="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Presets (dummy)" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <UniformGrid Columns="2" Rows="5">
                                <Button Content="Transition" Tag="Transition" Margin="4" Click="Preset_Click"/>
                                <Button Content="Set" Tag="Set" Margin="4" Click="Preset_Click"/>
                                <Button Content="PnR" Tag="PnR" Margin="4" Click="Preset_Click"/>
                                <Button Content="BLOB" Tag="BLOB" Margin="4" Click="Preset_Click"/>
                                <Button Content="SLOB" Tag="SLOB" Margin="4" Click="Preset_Click"/>
                                <Button Content="vs M/M" Tag="vs M/M" Margin="4" Click="Preset_Click"/>
                                <Button Content="vs Zone" Tag="vs Zone" Margin="4" Click="Preset_Click"/>
                                <Button Content="2nd Attack" Tag="2nd Attack" Margin="4" Click="Preset_Click"/>
                                <Button Content="M/M" Tag="M/M" Margin="4" Click="Preset_Click"/>
                                <Button Content="Rebound" Tag="Rebound" Margin="4" Click="Preset_Click"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
