<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>

        <!-- =========================
             LEFT SIDE (Player + Imported)
             ========================= -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.62*"/>
                <RowDefinition Height="0.38*"/>
            </Grid.RowDefinitions>

            <!-- Player -->
            <Border Grid.Row="0"
                    Background="#151515"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="SelectedTitle"
                               Grid.Row="0"
                               Text="Selected: (none)"
                               Foreground="#EDEDED"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <Border Grid.Row="1"
                            Background="#111111"
                            CornerRadius="8"
                            BorderBrush="#2A2A2A"
                            BorderThickness="1"
                            Padding="8">
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaEnded="Player_MediaEnded"/>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Slider x:Name="SeekSlider"
                                Minimum="0"
                                Maximum="1"
                                Value="0"
                                IsEnabled="False"
                                PreviewMouseLeftButtonDown="SeekSlider_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="SeekSlider_PreviewMouseLeftButtonUp"
                                ValueChanged="SeekSlider_ValueChanged"/>

                        <DockPanel Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Button Content="Play"  Width="76" Margin="0,0,8,0" Click="Play_Click"/>
                                <Button Content="Pause" Width="76" Margin="0,0,8,0" Click="Pause_Click"/>
                                <Button Content="Stop"  Width="76" Click="Stop_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="TimeText"
                                       Text="00:00 / 00:00"
                                       Foreground="#BFBFBF"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       DockPanel.Dock="Right"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Imported -->
            <Border Grid.Row="1"
                    Background="#151515"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="Imported Videos"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   DockPanel.Dock="Left"/>
                        <TextBlock x:Name="CountText"
                                   Text="Count: 0"
                                   Foreground="#AFAFAF"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Right"/>
                    </DockPanel>

                    <DataGrid x:Name="VideosGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="VideosGrid_SelectionChanged"
                              MouseDoubleClick="VideosGrid_MouseDoubleClick"
                              Background="#0F0F0F"
                              Foreground="White"
                              BorderBrush="#2A2A2A"
                              BorderThickness="1"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- =========================
             RIGHT SIDE (Range + Tags + Clips)
             ========================= -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Range -->
                <RowDefinition Height="Auto"/>  <!-- Tags -->
                <RowDefinition Height="*"/>     <!-- Clips list -->
            </Grid.RowDefinitions>

            <!-- Range (with Team selector + nudge buttons) -->
            <Border Grid.Row="0"
                    Background="#151515"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Clip Range"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="(select clip → range sync / START/END → Add Clip)"
                                   Foreground="#9A9A9A"
                                   FontSize="12"
                                   DockPanel.Dock="Right"/>
                    </DockPanel>

                    <!-- Team selector -->
                    <DockPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Team"
                                   Foreground="#BFBFBF"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <ComboBox Width="140"
                                  SelectedValue="{Binding SelectedTeam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Content"
                                  Margin="0,0,10,0">
                            <ComboBoxItem Content="Team A"/>
                            <ComboBoxItem Content="Team B"/>
                        </ComboBox>

                        <TextBlock Text="{Binding SelectedTeam}"
                                   Foreground="#EDEDED"
                                   VerticalAlignment="Center"/>
                    </DockPanel>

                    <!-- Start / End / Add -->
                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="START"
                                Width="84"
                                Margin="0,0,8,0"
                                Click="MarkStart_Click"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding ClipStartText}"
                                   Foreground="#EDEDED"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Button Grid.Column="2"
                                Content="END"
                                Width="84"
                                Margin="0,0,8,0"
                                Click="MarkEnd_Click"/>

                        <TextBlock Grid.Column="3"
                                   Text="{Binding ClipEndText}"
                                   Foreground="#EDEDED"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Button Grid.Column="4"
                                Content="Add Clip"
                                Padding="14,6"
                                Click="AddClip_Click"/>
                    </Grid>

                    <!-- Nudge -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Start nudge"
                                       Foreground="#BFBFBF"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <Button Content="-0.5s" Padding="12,6" Margin="0,0,6,0" Click="NudgeStartMinus_Click"/>
                            <Button Content="+0.5s" Padding="12,6" Click="NudgeStartPlus_Click"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="End nudge"
                                       Foreground="#BFBFBF"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <Button Content="-0.5s" Padding="12,6" Margin="0,0,6,0" Click="NudgeEndMinus_Click"/>
                            <Button Content="+0.5s" Padding="12,6" Click="NudgeEndPlus_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tags panel -->
            <Border Grid.Row="1"
                    Background="#151515"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="180"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Tags (Pending → next clip)"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Tags.Count, StringFormat=Count: {0}}"
                                   Foreground="#9A9A9A"
                                   FontSize="12"
                                   DockPanel.Dock="Right"/>
                    </DockPanel>

                    <TextBlock Grid.Row="1"
                               Text="{Binding PendingTagsText}"
                               Foreground="#BFBFBF"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <DockPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBox x:Name="TagInput"
                                 Height="30"
                                 MinWidth="200"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TagInput_KeyDown"
                                 Margin="0,0,10,0"/>
                        <Button Content="Add"
                                Padding="14,6"
                                Click="AddTag_Click"/>
                        <Button Content="Clear"
                                Padding="14,6"
                                Margin="10,0,0,0"
                                Click="ClearPending_Click"/>
                    </DockPanel>

                    <WrapPanel Grid.Row="3" Margin="0,0,0,10">
                        <Button Content="Transition" Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="PnR"        Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="Handoff"    Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="Post"       Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="Kickout"    Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="BLOB"       Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="SLOB"       Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="Zone"       Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                        <Button Content="Press"      Margin="0,0,8,8" Padding="12,6" Click="Preset_Click"/>
                    </WrapPanel>

                    <DataGrid Grid.Row="4"
                              ItemsSource="{Binding Tags}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="#0F0F0F"
                              Foreground="White"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="70"/>
                            <DataGridTextColumn Header="Tag"  Binding="{Binding Text}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Clips list -->
            <Border Grid.Row="2"
                    Background="#151515"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="Clips (click → jump / double click → range play)"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Clips.Count, StringFormat=Count: {0}}"
                                   Foreground="#9A9A9A"
                                   FontSize="12"
                                   DockPanel.Dock="Right"/>
                    </DockPanel>

                    <DataGrid x:Name="ClipsGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding Clips}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="ClipsGrid_SelectionChanged"
                              MouseDoubleClick="ClipsGrid_MouseDoubleClick"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="#0F0F0F"
                              Foreground="White"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Start" Binding="{Binding StartText}" Width="70"/>
                            <DataGridTextColumn Header="End"   Binding="{Binding EndText}" Width="70"/>
                            <DataGridTextColumn Header="Tags"  Binding="{Binding TagsText}" Width="*"/>
                            <DataGridTextColumn Header="Team"  Binding="{Binding Team}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
