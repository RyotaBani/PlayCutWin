<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="700"
             Background="Transparent">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: "Clips (Total ...)" + buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="ClipsTitleText"
                       Grid.Column="0"
                       Text="Clips (Total 0)"
                       Foreground="#E6E6E6"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="ImportCsvButton"
                        Content="Import CSV"
                        Width="110"
                        Height="34"
                        Margin="0,0,10,0"
                        Click="ImportCsv_Click"/>

                <Button x:Name="ExportCsvButton"
                        Content="Export CSV"
                        Width="110"
                        Height="34"
                        Margin="0,0,10,0"
                        Click="ExportCsv_Click"/>

                <Button x:Name="ExportAllButton"
                        Content="Export All"
                        Width="110"
                        Height="34"
                        Margin="0,0,10,0"
                        IsEnabled="False"
                        Click="ExportAll_Click"/>

                <Button x:Name="LoadVideoButton"
                        Content="Load Video"
                        Width="120"
                        Height="34"
                        Click="LoadVideo_Click"/>
            </StackPanel>
        </Grid>

        <!-- Body: 2 columns (Team A / Team B) + bottom stats placeholder -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#2B2B2B"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1"
                    CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="LoadedVideoText"
                               Grid.Row="0"
                               Text="No video loaded"
                               Foreground="#BDBDBD"
                               Margin="0,0,0,10"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Team A -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Team A Clips (0)"
                                       Foreground="#E6E6E6"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="No clips for Team A with current filter."
                                       Foreground="#9E9E9E"/>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Grid.Column="1" Background="#3A3A3A" />

                        <!-- Team B -->
                        <StackPanel Grid.Column="2" Margin="12,0,0,0">
                            <TextBlock Text="Team B Clips (0)"
                                       Foreground="#E6E6E6"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="No clips for Team B with current filter."
                                       Foreground="#9E9E9E"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tag Stats -->
            <Border Grid.Row="1"
                    Margin="0,10,0,0"
                    Background="#2B2B2B"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1"
                    CornerRadius="10">
                <StackPanel Margin="12">
                    <TextBlock Text="Tag Stats"
                               Foreground="#E6E6E6"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="No clips yet."
                               Foreground="#9E9E9E"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
