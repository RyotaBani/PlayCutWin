<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Imported Videos"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding ImportedVideos.Count, StringFormat=Count: {0}}"
                       Foreground="#B0B0B0"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="430"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List -->
            <Border Grid.Column="0" Background="#151515" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="(Import Video で選択したファイルがここに並ぶ)"
                               Foreground="#8F8F8F"
                               FontSize="12"
                               Margin="0,0,0,8"/>

                    <DataGrid Grid.Row="1"
                              x:Name="VideosGrid"
                              ItemsSource="{Binding ImportedVideos}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="VideosGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Player -->
            <Border Grid.Column="2" Background="#151515" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding SelectedVideoName, StringFormat=Selected: {0}}"
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,8"/>

                    <!-- ここが暫定プレイヤー（環境によってはコーデック依存あり） -->
                    <Border Grid.Row="1" Background="#0F0F0F" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="6">
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaEnded="Player_MediaEnded"/>
                    </Border>

                    <!-- Controls -->
                    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
                        <Slider x:Name="Seek"
                                Minimum="0"
                                Maximum="1"
                                Value="0"
                                PreviewMouseDown="Seek_PreviewMouseDown"
                                PreviewMouseUp="Seek_PreviewMouseUp"/>

                        <DockPanel Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Button Content="Play" Width="70" Margin="0,0,8,0" Click="Play_Click"/>
                                <Button Content="Pause" Width="70" Margin="0,0,8,0" Click="Pause_Click"/>
                                <Button Content="Stop" Width="70" Click="Stop_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="TimeText"
                                       Text="00:00 / 00:00"
                                       Foreground="#B0B0B0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
