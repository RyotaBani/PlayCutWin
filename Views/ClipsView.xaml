<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Clips"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#EEE"
                   Margin="0,0,0,8"/>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Videos}"
                 SelectedItem="{Binding SelectedVideo, Mode=TwoWay}"
                 DisplayMemberPath="Name"
                 Background="#111"
                 Foreground="#EEE"
                 BorderBrush="#333"
                 BorderThickness="1"
                 SelectionChanged="Clip_SelectionChanged"/>
    </Grid>
</UserControl>
