<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Imported Videos"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <TextBlock x:Name="CountText"
                       Text="Count: 0"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Body: left list / right player -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- Left: list card -->
            <Border Grid.Column="0"
                    Background="#1A1A1A"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="(Import Video で選択したファイルがここに並ぶ)"
                               Foreground="#9A9A9A"
                               FontSize="12"
                               Margin="0,0,0,8"/>

                    <DataGrid x:Name="ClipsGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="ClipsGrid_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Right: player card -->
            <Border Grid.Column="2"
                    Background="#1A1A1A"
                    CornerRadius="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="SelectedTitle"
                               Text="Selected: (none)"
                               Foreground="#BFBFBF"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,0,8"/>

                    <!-- Video -->
                    <Border Grid.Row="1"
                            Background="#111111"
                            CornerRadius="8"
                            BorderBrush="#2A2A2A"
                            BorderThickness="1"
                            Padding="6">
                        <Grid>
                            <MediaElement x:Name="Player"
                                          LoadedBehavior="Manual"
                                          UnloadedBehavior="Manual"
                                          Stretch="Uniform"
                                          MediaOpened="Player_MediaOpened"
                                          MediaEnded="Player_MediaEnded"/>
                            <TextBlock x:Name="NoVideoText"
                                       Text="No video selected"
                                       Foreground="#777777"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </Border>

                    <!-- Seek row -->
                    <DockPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock x:Name="TimeText"
                                   Text="00:00 / 00:00"
                                   Foreground="#BFBFBF"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Right"
                                   Margin="10,0,0,0"/>
                        <Slider x:Name="SeekSlider"
                                Minimum="0"
                                Maximum="1"
                                Value="0"
                                VerticalAlignment="Center"
                                PreviewMouseDown="SeekSlider_PreviewMouseDown"
                                PreviewMouseUp="SeekSlider_PreviewMouseUp"/>
                    </DockPanel>

                    <!-- Controls -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0">
                        <Button Content="Play"  Width="80" Margin="0,0,8,0" Click="Play_Click"/>
                        <Button Content="Pause" Width="80" Margin="0,0,8,0" Click="Pause_Click"/>
                        <Button Content="Stop"  Width="80" Click="Stop_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
