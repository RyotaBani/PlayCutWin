<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="Imported Videos"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       DockPanel.Dock="Left"/>
            <TextBlock x:Name="CountText"
                       Text="Count: 0"
                       Foreground="#B0B0B0"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <ListView Grid.Row="1"
                  x:Name="VideoList"
                  Background="#141414"
                  Foreground="White"
                  BorderBrush="#2A2A2A"
                  BorderThickness="1"
                  SelectionChanged="VideoList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="260" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Path" Width="720" DisplayMemberBinding="{Binding Path}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
