<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="12">
            <DockPanel>
                <TextBlock Text="Imported Videos"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <TextBlock x:Name="CountText"
                           Text="Count: 0"
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0"
                Background="#1A1A1A" CornerRadius="10"
                BorderBrush="#2A2A2A" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="（クリックした行が “選択中” になります）"
                           Foreground="#9A9A9A"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <ListView Grid.Row="1"
                          x:Name="VideoList"
                          Background="#141414"
                          BorderBrush="#2A2A2A"
                          BorderThickness="1"
                          Foreground="White"
                          SelectionChanged="VideoList_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="260" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Path" Width="720" DisplayMemberBinding="{Binding Path}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
