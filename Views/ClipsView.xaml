<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#111111">

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>

        <!-- Left: list -->
        <Border Grid.Column="0"
                Background="#1A1A1A"
                CornerRadius="10"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                Padding="16"
                Margin="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Clips"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <DockPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Imported Videos"
                               Foreground="#EDEDED"
                               FontSize="14"
                               FontWeight="SemiBold"
                               DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <TextBlock Text="Count: "
                                   Foreground="#9A9A9A"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="CountText"
                                   Text="0"
                                   Foreground="#EDEDED"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>

                <ListView x:Name="VideoList"
                          Grid.Row="2"
                          SelectionChanged="VideoList_SelectionChanged"
                          Background="#111111"
                          BorderBrush="#2A2A2A"
                          BorderThickness="1"
                          Foreground="#EDEDED">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="280" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Path" Width="520" DisplayMemberBinding="{Binding Path}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Right: player -->
        <Border Grid.Column="1"
                Background="#1A1A1A"
                CornerRadius="10"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Preview"
                           Foreground="#EDEDED"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1"
                        Background="#111111"
                        BorderBrush="#2A2A2A"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,8">
                    <Button Content="Play"  Width="90" Margin="0,0,10,0" Click="Play_Click"/>
                    <Button Content="Pause" Width="90" Margin="0,0,10,0" Click="Pause_Click"/>
                    <Button Content="Stop"  Width="90" Click="Stop_Click"/>
                </StackPanel>

                <TextBlock Grid.Row="3"
                           x:Name="StatusText"
                           Text="Ready"
                           Foreground="#BFBFBF"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
