<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="12">
            <DockPanel>
                <TextBlock Text="Imported Videos"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <TextBlock x:Name="CountText"
                           Text="0"
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="（Import Video で選択したファイルがここに並ぶ）"
                           Foreground="#9A9A9A"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <ListBox Grid.Row="1"
                         x:Name="VideoList"
                         Background="#141414"
                         BorderBrush="#2A2A2A"
                         BorderThickness="1"
                         Foreground="White"
                         Padding="6"
                         />
            </Grid>
        </Border>
    </Grid>
</UserControl>
