<UserControl x:Class="PlayCutWin.Views.ClipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Border Background="#1A1A1A" CornerRadius="10" BorderBrush="#2A2A2A" BorderThickness="1" Padding="16">
        <StackPanel>
            <TextBlock Text="Clips"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock Text="ここにクリップ一覧（開始/終了/タグ/チームなど）を表示する予定。"
                       Foreground="#B0B0B0"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>

            <Border Background="#222222" CornerRadius="8" Padding="12" BorderBrush="#2A2A2A" BorderThickness="1">
                <TextBlock Text="(placeholder) clip list"
                           Foreground="#AFAFAF"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
