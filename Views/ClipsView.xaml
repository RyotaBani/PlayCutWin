using Microsoft.Win32;
using System;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Threading;

namespace PlayCutWin.Views
{
    public partial class ClipsView : UserControl
    {
        private readonly AppState _state = AppState.Instance;
        private readonly DispatcherTimer _positionTimer;

        public ClipsView()
        {
            InitializeComponent();

            VideoList.ItemsSource = _state.ImportedVideos;

            _positionTimer = new DispatcherTimer
            {
                Interval = TimeSpan.FromMilliseconds(200)
            };
            _positionTimer.Tick += (_, __) =>
            {
                try
                {
                    // MediaElement の CurrentPosition を state に流す
                    if (Player != null)
                    {
                        _state.PlaybackPosition = Player.Position;
                    }
                }
                catch { /* ここは落とさない */ }
            };
            _positionTimer.Start();

            UpdateCount();
        }

        private void UpdateCount()
        {
            CountText.Text = _state.ImportedVideos.Count.ToString();
        }

        private void ImportVideo_Click(object sender, RoutedEventArgs e)
        {
            var dlg = new OpenFileDialog
            {
                Title = "Import Video",
                Filter = "Video Files|*.mp4;*.mov;*.m4v;*.avi;*.wmv|All Files|*.*"
            };

            if (dlg.ShowDialog() == true)
            {
                var path = dlg.FileName;
                _state.ImportedVideos.Add(new ImportedVideo
                {
                    Name = System.IO.Path.GetFileName(path),
                    Path = path
                });
                _state.SetSelected(path);

                UpdateCount();
                StatusText.Text = $"Imported: {path}";
            }
        }

        private void VideoList_SelectionChanged(object sender, SelectionChangedEventArgs e)
        {
            if (VideoList.SelectedItem is ImportedVideo v)
            {
                _state.SetSelected(v.Path);
                StatusText.Text = $"Selected: {v.Name}";
                LoadAndPlay(v.Path);
            }
        }

        private void LoadAndPlay(string path)
        {
            try
            {
                Player.Source = new Uri(path);
                Player.LoadedBehavior = MediaState.Manual;
                Player.UnloadedBehavior = MediaState.Manual;
                Player.Play();

                StatusText.Text = $"Playing: {System.IO.Path.GetFileName(path)}";
            }
            catch (Exception ex)
            {
                MessageBox.Show(ex.Message, "Clips", MessageBoxButton.OK, MessageBoxImage.Error);
            }
        }

        private void Play_Click(object sender, RoutedEventArgs e)
        {
            Player?.Play();
            StatusText.Text = "Play";
        }

        private void Pause_Click(object sender, RoutedEventArgs e)
        {
            Player?.Pause();
            StatusText.Text = "Pause";
        }

        private void Stop_Click(object sender, RoutedEventArgs e)
        {
            Player?.Stop();
            StatusText.Text = "Stop";
        }
    }
}
