<Window x:Class="PlayCutWin.Views.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Preferences"
        Width="720" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#111111"
        Foreground="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock Margin="0,6,0,0" Opacity="0.8"
                       Text="Click a cell to edit, or press “Record…” to capture the next key stroke. Avoid duplicates. (Typing boxes in the main UI ignore shortcuts.)"/>
        </StackPanel>

        <Border Grid.Row="2" Background="#1B1B1B" CornerRadius="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="GridShortcuts"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          Background="#1B1B1B"
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          RowBackground="#1B1B1B"
                          AlternatingRowBackground="#202020"
                          BorderThickness="0"
                          SelectionMode="Single"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Action" Binding="{Binding Display}" IsReadOnly="True" Width="2*"/>
                        <DataGridTextColumn Header="Shortcut" Binding="{Binding Gesture}" Width="*"/>
                        <DataGridTemplateColumn Header="" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Record…"
                                            Padding="10,4"
                                            Margin="4,2"
                                            Click="Record_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock x:Name="TextStatus" Grid.Row="1" Margin="4,8,4,0" Opacity="0.8"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reset to Default" Margin="0,0,8,0" Padding="12,6" Click="Reset_Click"/>
            <Button Content="Cancel" Margin="0,0,8,0" Padding="12,6" Click="Cancel_Click"/>
            <Button Content="Save" Padding="18,6" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
