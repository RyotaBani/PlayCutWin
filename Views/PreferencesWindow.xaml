<Window x:Class="PlayCutWin.Views.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F2F2F2">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Keyboard Shortcuts"
                   FontSize="18" FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
            <DataGrid x:Name="GridShortcuts"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      SelectionMode="Single"
                      Margin="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" IsReadOnly="True" Width="120"/>
                    <DataGridTextColumn Header="Action" Binding="{Binding Title}" IsReadOnly="True" Width="*"/>
                    <DataGridTextColumn Header="Shortcut" Binding="{Binding Gesture, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock x:Name="TxtStatus" Foreground="#444" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Restore Defaults" Margin="0,0,8,0" Padding="12,6" Click="RestoreDefaults_Click"/>
                <Button Content="Cancel" Margin="0,0,8,0" Padding="12,6" IsCancel="True"/>
                <Button Content="Save" Padding="18,6" IsDefault="True" Click="Save_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
