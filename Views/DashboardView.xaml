<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="✅ Windows build is working"
                       Foreground="#EDEDED"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

            <TextBlock Text="Next: add video preview playback (MediaElement)."
                       Foreground="#B0B0B0"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,0,0,14"/>

            <Border Background="#222222" CornerRadius="8" Padding="12" BorderBrush="#2A2A2A" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Selected video:"
                               Foreground="#B0B0B0"
                               FontSize="12"/>
                    <TextBlock Text="{Binding SelectedVideoPath}"
                               Foreground="White"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Tip: まず Clips で選択 → そのまま再生できるようにする（次のコミット）"
                       Foreground="#8F8F8F"
                       Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
