<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ===== 左上：Video ===== -->
        <Border Grid.Row="0" Grid.Column="0" CornerRadius="10" Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" Margin="0,0,8,8" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- タイトル（ファイル名 or Video(16:9)） -->
                <TextBlock Text="{Binding VideoHeaderText}"
                           Foreground="#EDEDED"
                           FontSize="16"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,8"/>

                <!-- Team A / Team B -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Team A" Foreground="#CFCFCF" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="28"
                                 Background="#1F1F1F"
                                 Foreground="#EDEDED"
                                 BorderBrush="#3A3A3A"
                                 BorderThickness="1"
                                 Padding="10,4"
                                 FontSize="12"
                                 />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Team B" Foreground="#CFCFCF" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="28"
                                 Background="#1F1F1F"
                                 Foreground="#EDEDED"
                                 BorderBrush="#3A3A3A"
                                 BorderThickness="1"
                                 Padding="10,4"
                                 FontSize="12"
                                 />
                    </StackPanel>
                </Grid>

                <!-- Player -->
                <Border Grid.Row="2" CornerRadius="10" Background="#3A3A3A" Padding="10">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed" />

                        <!-- overlay -->
                        <TextBlock x:Name="PlayerHint"
                                   Text="Load video from the button →"
                                   Foreground="#BDBDBD"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===== 右上：Clips ===== -->
        <Border Grid.Row="0" Grid.Column="1" CornerRadius="10" Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" Margin="8,0,0,8" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ClipsHeaderText}"
                               Foreground="#EDEDED"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Import CSV" Margin="6,0,0,0" Padding="16,6" Click="ImportCsv_Click"/>
                        <Button Content="Export CSV" Margin="6,0,0,0" Padding="16,6" Click="ExportCsv_Click"/>
                        <Button Content="Export All" Margin="6,0,0,0" Padding="16,6" Click="ExportAll_Click"/>
                        <Button Content="Load Video" Margin="6,0,0,0" Padding="16,6" Click="LoadVideo_Click"/>
                    </StackPanel>
                </Grid>

                <!-- selected filename line -->
                <TextBlock Grid.Row="1"
                           Text="{Binding SelectedVideoName}"
                           Foreground="#CFCFCF"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,8,0,10"/>

                <!-- Placeholder area -->
                <Border Grid.Row="2" CornerRadius="10" Background="#262626" BorderBrush="#3A3A3A" BorderThickness="1" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Team A Clips (0)" Foreground="#EDEDED" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="No clips for Team A with current filter." Foreground="#AFAFAF" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#3A3A3A" Margin="12,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Team B Clips (0)" Foreground="#EDEDED" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="No clips for Team B with current filter." Foreground="#AFAFAF" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===== 左下：Controls ===== -->
        <Border Grid.Row="1" Grid.Column="0" CornerRadius="10" Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" Margin="0,8,8,0" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Controls" Foreground="#EDEDED" FontSize="16" FontWeight="SemiBold"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
                    <Button Content="Play" Width="72" Margin="0,0,8,0" Click="Play_Click"/>
                    <Button Content="Pause" Width="72" Margin="0,0,8,0" Click="Pause_Click"/>
                    <Button Content="Stop" Width="72" Margin="0,0,8,0" Click="Stop_Click"/>

                    <Button Content="-0.5s" Width="72" Margin="12,0,8,0" Click="Minus05_Click"/>
                    <Button Content="+0.5s" Width="72" Margin="0,0,12,0" Click="Plus05_Click"/>

                    <TextBlock Text="{Binding TimeText}" Foreground="#EDEDED" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="START" Height="140" Margin="0,0,10,0" Click="SetStart_Click"/>
                    <Button Grid.Column="1" Content="END" Height="140" Margin="0,0,10,0" Click="SetEnd_Click"/>
                    <Button Grid.Column="2" Content="Reset" Height="140" Margin="0,0,10,0" Click="ResetClip_Click"/>

                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ClipStartText}" Foreground="#EDEDED" FontSize="12" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding ClipEndText}" Foreground="#EDEDED" FontSize="12"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#BDBDBD" FontSize="12" Margin="0,14,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ===== 右下：Tags ===== -->
        <Border Grid.Row="1" Grid.Column="1" CornerRadius="10" Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" Margin="8,8,0,0" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tags" Foreground="#EDEDED" FontSize="16" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" Content="Preferences..." Padding="14,6" Click="Preferences_Click"/>
                </Grid>

                <TextBlock Grid.Row="1"
                           Text="{Binding SelectedVideoPathText}"
                           Foreground="#CFCFCF"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,8,0,10"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TagInput"
                             Grid.Column="0"
                             Height="28"
                             Background="#1F1F1F"
                             Foreground="#EDEDED"
                             BorderBrush="#3A3A3A"
                             BorderThickness="1"
                             Padding="10,4"
                             FontSize="12"
                             KeyDown="TagInput_KeyDown"
                             />

                    <Button Grid.Column="1" Content="Add" Margin="10,0,0,0" Click="AddTag_Click"/>
                    <Button Grid.Column="2" Content="Clear" Margin="10,0,0,0" Click="ClearTags_Click"/>
                </Grid>

                <Border Grid.Row="3" CornerRadius="10" Background="#262626" BorderBrush="#3A3A3A" BorderThickness="1" Margin="0,10,0,0" Padding="10">
                    <ListBox ItemsSource="{Binding Tags}"
                             Background="Transparent"
                             Foreground="#EDEDED"
                             BorderThickness="0"
                             FontSize="12"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
