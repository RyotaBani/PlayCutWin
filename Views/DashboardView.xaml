<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ===== 左上：Video ===== -->
        <Border Grid.Row="0" Grid.Column="0"
                Style="{DynamicResource PanelBorder}"
                Margin="0,0,8,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- タイトル（ファイル名 or Video(16:9)） -->
                <TextBlock Style="{DynamicResource H1}"
                           Text="{Binding VideoHeaderText}"
                           Margin="0,0,0,10"/>

                <!-- Team A / Team B -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Style="{DynamicResource Small}" Text="Team A" Margin="0,0,0,4"/>
                        <TextBox Style="{DynamicResource TeamTextBox}"
                                 Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{DynamicResource Small}" Text="Team B" Margin="0,0,0,4"/>
                        <TextBox Style="{DynamicResource TeamTextBox}"
                                 Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>

                <!-- Player -->
                <Border Grid.Row="2" Style="{DynamicResource InnerBorder}">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed" />

                        <TextBlock x:Name="PlayerHint"
                                   Text="Load video from the button →"
                                   Foreground="{DynamicResource Text3}"
                                   FontSize="{DynamicResource FontH1}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===== 右上：Clips ===== -->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{DynamicResource PanelBorder}"
                Margin="8,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{DynamicResource H1}"
                               Text="{Binding ClipsHeaderText}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{DynamicResource TopButton}" Content="Import CSV" Click="ImportCsv_Click"/>
                        <Button Style="{DynamicResource TopButton}" Content="Export CSV" Click="ExportCsv_Click"/>
                        <Button Style="{DynamicResource TopButton}" Content="Export All" Click="ExportAll_Click"/>
                        <Button Style="{DynamicResource AccentButton}" Content="Load Video" Click="LoadVideo_Click"/>
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="1"
                           Style="{DynamicResource Small}"
                           Text="{Binding SelectedVideoName}"
                           Margin="0,8,0,10"/>

                <Border Grid.Row="2" Style="{DynamicResource InnerBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{DynamicResource H2}" Text="Team A Clips (0)"/>
                            <TextBlock Style="{DynamicResource Small}" Text="No clips for Team A with current filter." Margin="0,6,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="{DynamicResource Border}" Margin="12,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{DynamicResource H2}" Text="Team B Clips (0)"/>
                            <TextBlock Style="{DynamicResource Small}" Text="No clips for Team B with current filter." Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===== 左下：Controls ===== -->
        <Border Grid.Row="1" Grid.Column="0"
                Style="{DynamicResource PanelBorder}"
                Margin="0,8,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{DynamicResource H1}" Text="Controls"/>

                <!-- Top row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
                    <!-- ▶ / ⏸ トグル -->
                    <Button Style="{DynamicResource TopButton}" MinWidth="52" Margin="0,0,8,0" Click="Play_Click" ToolTip="{Binding PlayPauseHint}">
                        <TextBlock Text="{Binding PlayPauseGlyph}" FontSize="{DynamicResource FontH2}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button Style="{DynamicResource TopButton}" Content="Stop" Margin="0,0,8,0" Click="Stop_Click"/>

                    <Button Style="{DynamicResource TopButton}" Content="-0.5s" Margin="12,0,8,0" Click="Minus05_Click"/>
                    <Button Style="{DynamicResource TopButton}" Content="+0.5s" Margin="0,0,12,0" Click="Plus05_Click"/>

                    <TextBlock Style="{DynamicResource H1}" Text="{Binding TimeText}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Big buttons -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Clip START" Height="160" Margin="0,0,10,0" Click="SetStart_Click"/>
                    <Button Grid.Column="1" Content="Clip END" Height="160" Margin="0,0,10,0" Click="SetEnd_Click"/>
                    <Button Grid.Column="2" Content="Reset" Height="160" Margin="0,0,10,0" Click="ResetClip_Click"/>

                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                        <TextBlock Style="{DynamicResource Small}" Text="Start 00:00" Margin="0,0,0,6"/>
                        <TextBlock Style="{DynamicResource Small}" Text="End 00:00" Margin="0,0,0,14"/>
                        <TextBlock Style="{DynamicResource Small}" Text="{Binding StatusMessage}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ===== 右下：Tags ===== -->
        <Border Grid.Row="1" Grid.Column="1"
                Style="{DynamicResource PanelBorder}"
                Margin="8,8,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{DynamicResource H1}" Text="Tags"/>
                    <Button Grid.Column="1" Style="{DynamicResource TopButton}" Content="Preferences..." Click="Preferences_Click"/>
                </Grid>

                <TextBlock Grid.Row="1"
                           Style="{DynamicResource Small}"
                           Text="{Binding SelectedVideoPathText}"
                           Margin="0,8,0,10"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="96" />
                        <ColumnDefinition Width="96" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TagInput"
                             Grid.Column="0"
                             Style="{DynamicResource TeamTextBox}"
                             KeyDown="TagInput_KeyDown"/>

                    <Button Grid.Column="1" Style="{DynamicResource TopButton}" Content="Add" Margin="10,0,0,0" Click="AddTag_Click"/>
                    <Button Grid.Column="2" Style="{DynamicResource TopButton}" Content="Clear" Margin="10,0,0,0" Click="ClearTags_Click"/>
                </Grid>

                <Border Grid.Row="3" Style="{DynamicResource InnerBorder}" Margin="0,10,0,0">
                    <ListBox ItemsSource="{Binding Tags}"
                             Background="Transparent"
                             Foreground="{DynamicResource Text1}"
                             BorderThickness="0"
                             FontSize="{DynamicResource FontBody}"
                             DisplayMemberPath="Tag"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
