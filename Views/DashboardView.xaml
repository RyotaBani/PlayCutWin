<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1F1F1F">

    <UserControl.Resources>
        <!-- Macっぽい暗め + 角丸パネル -->
        <Style TargetType="Border" x:Key="PanelBorder">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#262626"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TitleText">
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubLabel">
            <Setter Property="Foreground" Value="#CFCFCF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="MutedText">
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="Button" x:Key="TopButton">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button" x:Key="AccentButton" BasedOn="{StaticResource TopButton}">
            <Setter Property="Background" Value="#2F6FED"/>
            <Setter Property="BorderBrush" Value="#2F6FED"/>
        </Style>

        <Style TargetType="TextBox" x:Key="TeamBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- =========================
             左上：Video + Team + Player
             ========================= -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- タイトル（Mac: Video(16:9) or ファイル名） -->
                <TextBlock x:Name="VideoTitle"
                           Style="{StaticResource TitleText}"
                           Text="Video (16:9)"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Team A / Team B -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Style="{StaticResource SubLabel}" Text="Team A" Margin="2,0,0,4"/>
                        <TextBox x:Name="TeamATextBox"
                                 Style="{StaticResource TeamBox}"
                                 Text="Home / Our Team"
                                 GotFocus="TeamATextBox_GotFocus"
                                 LostFocus="TeamATextBox_LostFocus"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{StaticResource SubLabel}" Text="Team B" Margin="2,0,0,4"/>
                        <TextBox x:Name="TeamBTextBox"
                                 Style="{StaticResource TeamBox}"
                                 Text="Away / Opponent"
                                 GotFocus="TeamBTextBox_GotFocus"
                                 LostFocus="TeamBTextBox_LostFocus"/>
                    </StackPanel>
                </Grid>

                <!-- Player枠 -->
                <Border Grid.Row="2"
                        CornerRadius="12"
                        Background="#343434"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        Padding="12">

                    <Grid>
                        <!-- MediaElement（再生を確実にする設定） -->
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      ScrubbingEnabled="True"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed"/>

                        <!-- 動画未選択時の表示（Macの “Load video from the button →” 的なやつ） -->
                        <TextBlock x:Name="NoVideoText"
                                   Style="{StaticResource MutedText}"
                                   Text="Load video from the button →"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- =========================
             右上：Clips + ボタン群
             ========================= -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PanelBorder}" Margin="12,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource TitleText}" Text="Clips (Total 0)"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource TopButton}" Content="Import CSV" Click="ImportCsv_Click"/>
                        <Button Style="{StaticResource TopButton}" Content="Export CSV" Click="ExportCsv_Click"/>
                        <Button Style="{StaticResource TopButton}" Content="Export All" Click="ExportAll_Click"/>
                        <Button Style="{StaticResource AccentButton}" Content="Load Video" Click="LoadVideo_Click"/>
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="1"
                           x:Name="ClipsVideoPathText"
                           Style="{StaticResource MutedText}"
                           Text="No video loaded"
                           Margin="0,10,0,8"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Clips表示枠（今はダミー） -->
                <Border Grid.Row="2" CornerRadius="10" Background="#1F1F1F" BorderBrush="#3A3A3A" BorderThickness="1" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource SubLabel}" Text="Team A Clips (0)"/>
                            <TextBlock Style="{StaticResource MutedText}" Text="No clips for Team A with current filter." Margin="0,6,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#3A3A3A" Margin="12,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource SubLabel}" Text="Team B Clips (0)"/>
                            <TextBlock Style="{StaticResource MutedText}" Text="No clips for Team B with current filter." Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="3" Style="{StaticResource MutedText}" Text="Tag Stats" Margin="0,12,0,0"/>
            </Grid>
        </Border>

        <!-- =========================
             左下：Controls
             ========================= -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource PanelBorder}" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource TitleText}" Text="Controls"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Style="{StaticResource TopButton}" Content="Play" Click="Play_Click" Margin="0,0,0,0"/>
                    <Button Style="{StaticResource TopButton}" Content="Pause" Click="Pause_Click"/>
                    <Button Style="{StaticResource TopButton}" Content="Stop" Click="Stop_Click"/>

                    <Button Style="{StaticResource TopButton}" Content="-0.5s" Click="Minus05_Click" Margin="16,0,0,0"/>
                    <Button Style="{StaticResource TopButton}" Content="+0.5s" Click="Plus05_Click"/>

                    <TextBlock x:Name="TimeText"
                               Foreground="#EDEDED"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="16,2,0,0"
                               Text="00:00  /  00:00"/>
                </StackPanel>

                <Border Grid.Row="2" CornerRadius="10" Background="#1F1F1F" BorderBrush="#3A3A3A" BorderThickness="1" Margin="0,14,0,0" Padding="12">
                    <TextBlock Style="{StaticResource MutedText}" Text="(ここに Clip START/END などを後で追加)"/>
                </Border>
            </Grid>
        </Border>

        <!-- =========================
             右下：Tags
             ========================= -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelBorder}" Margin="12,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource TitleText}" Text="Tags"/>

                    <Button Grid.Column="1" Style="{StaticResource TopButton}" Content="Preferences..." Click="Preferences_Click" />
                </Grid>

                <TextBlock Grid.Row="1"
                           x:Name="TagsVideoPathText"
                           Style="{StaticResource MutedText}"
                           Text=""
                           Margin="0,10,0,8"
                           TextTrimming="CharacterEllipsis"/>

                <Border Grid.Row="2" CornerRadius="10" Background="#1F1F1F" BorderBrush="#3A3A3A" BorderThickness="1" Padding="12">
                    <TextBlock Style="{StaticResource MutedText}" Text="(タグ一覧はこの枠に後で配置 / いまはダミー)"/>
                </Border>

                <TextBlock Grid.Row="3" Style="{StaticResource MutedText}" Text="Double click a tag to remove." Margin="0,12,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
