<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PlayCutWin.Views"
             Background="#1E1E1E">
    <UserControl.Resources>

        <!-- 見出し（Macの "Team A Clips(0)" 相当のサイズ感） -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SmallLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CFCFCF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- パネル -->
        <Style x:Key="PanelBorder" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Macっぽいボタン -->
        <Style x:Key="MacButton" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource MacButton}">
            <Setter Property="Background" Value="#2D6CDF"/>
            <Setter Property="BorderBrush" Value="#2D6CDF"/>
        </Style>

        <!-- Team入力（高さを小さめ） -->
        <Style x:Key="TeamBox" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== Left Top : Player ===================== -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- タイトル（Video(16:9) or ファイル名） -->
                <TextBlock Grid.Row="0"
                           Style="{StaticResource HeaderText}"
                           Text="{Binding VideoTitleText}"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Team A / Team B （左上領域の上部を1/2スペースに寄せる） -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Style="{StaticResource SmallLabel}" Text="Team A" Margin="0,0,0,6"/>
                        <Grid>
                            <TextBox x:Name="TeamABox" Style="{StaticResource TeamBox}"
                                     Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Home / Our Team"
                                       Foreground="#8F8F8F"
                                       FontSize="12"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TeamABox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Style="{StaticResource SmallLabel}" Text="Team B" Margin="0,0,0,6"/>
                        <Grid>
                            <TextBox x:Name="TeamBBox" Style="{StaticResource TeamBox}"
                                     Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Away / Opponent"
                                       Foreground="#8F8F8F"
                                       FontSize="12"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TeamBBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Player -->
                <Border Grid.Row="2" Background="#3A3A3A" CornerRadius="10" Padding="8">
                    <Grid>
                        <MediaElement x:Name="VideoPlayer"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="VideoPlayer_MediaOpened"
                                      MediaFailed="VideoPlayer_MediaFailed"/>
                        <TextBlock Text="Load video from the button →"
                                   Foreground="#BDBDBD"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasVideo}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===================== Right Top : Clips ===================== -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource HeaderText}" Text="Clips (Total 0)"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MacButton}" Content="Import CSV" Click="ImportCsv_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="Export CSV" Click="ExportCsv_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="Export All"  Click="ExportAll_Click"/>
                        <Button Style="{StaticResource AccentButton}" Content="Load Video" Click="LoadVideo_Click"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Margin="0,12,0,0" Background="#252525" CornerRadius="10" BorderBrush="#3A3A3A" BorderThickness="1">
                    <TextBlock Text="(clips area dummy)"
                               Foreground="#9A9A9A"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- ===================== Left Bottom : Controls ===================== -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource HeaderText}" Text="Controls"/>

                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                        <Button Style="{StaticResource MacButton}" Content="Play"  Click="Play_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="Pause" Click="Pause_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="Stop"  Click="Stop_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="-0.5s" Click="Minus05_Click"/>
                        <Button Style="{StaticResource MacButton}" Content="+0.5s" Click="Plus05_Click"/>

                        <TextBlock Margin="16,0,0,0" Foreground="#EDEDED" FontSize="16" FontWeight="SemiBold"
                                   Text="{Binding PlaybackPositionText}"/>
                        <TextBlock Margin="10,0,0,0" Foreground="#9A9A9A" FontSize="16" FontWeight="SemiBold" Text="/"/>
                        <TextBlock Margin="10,0,0,0" Foreground="#9A9A9A" FontSize="16" FontWeight="SemiBold"
                                   Text="{Binding PlaybackDurationText}"/>
                    </StackPanel>

                    <Border Grid.Row="1" Margin="0,12,0,0" Background="#252525" CornerRadius="10" BorderBrush="#3A3A3A" BorderThickness="1">
                        <TextBlock Text="(controls area dummy: Clip START/END etc will be placed here)"
                                   Foreground="#9A9A9A"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- ===================== Right Bottom : Tags ===================== -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource HeaderText}" Text="Tags"/>

                <Border Grid.Row="1" Margin="0,12,0,0" Background="#252525" CornerRadius="10" BorderBrush="#3A3A3A" BorderThickness="1">
                    <TextBlock Text="(tags area dummy)"
                               Foreground="#9A9A9A"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>
