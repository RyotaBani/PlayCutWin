<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1F1F1F">

    <UserControl.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EDEDED"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="78"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,2"/>
        </Style>

        <Style x:Key="SmallLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- =======================
             LEFT TOP : Video
        ======================== -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock x:Name="VideoTitle"
                           Grid.Row="0"
                           Style="{StaticResource HeaderText}"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Team inputs (width half) -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Team A" Style="{StaticResource SmallLabel}"/>
                        <TextBox x:Name="TeamATextBox"
                                 GotFocus="TeamATextBox_GotFocus"
                                 LostFocus="TeamATextBox_LostFocus"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Team B" Style="{StaticResource SmallLabel}"/>
                        <TextBox x:Name="TeamBTextBox"
                                 GotFocus="TeamBTextBox_GotFocus"
                                 LostFocus="TeamBTextBox_LostFocus"/>
                    </StackPanel>
                </Grid>

                <!-- Player area -->
                <Border Grid.Row="2"
                        Background="#3A3A3A"
                        CornerRadius="12"
                        Padding="10">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed"/>

                        <!-- Overlay when no video -->
                        <TextBlock x:Name="NoVideoText"
                                   Text="Load video from the button â†’"
                                   Foreground="#B0B0B0"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!-- time (bottom-right) -->
                        <TextBlock x:Name="TimeText"
                                   Text="00:00  /  00:00"
                                   Foreground="#D0D0D0"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="0,0,4,2"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- =======================
             RIGHT TOP : Clips (dummy area + buttons)
        ======================== -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- header row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Clips (Total 0)"
                               Style="{StaticResource HeaderText}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Import CSV" Click="ImportCsv_Click"/>
                        <Button Content="Export CSV" Click="ExportCsv_Click"/>
                        <Button Content="Export All" Click="ExportAll_Click"/>
                        <Button Content="Load Video" Click="LoadVideo_Click"/>
                    </StackPanel>
                </Grid>

                <!-- path / status -->
                <TextBlock x:Name="ClipsVideoPathText"
                           Grid.Row="1"
                           Foreground="#CFCFCF"
                           FontSize="12"
                           Margin="0,10,0,0"
                           Text="No video loaded"
                           TextTrimming="CharacterEllipsis"/>

                <!-- big dummy area -->
                <Border Grid.Row="2"
                        Background="#202020"
                        CornerRadius="10"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        Margin="0,12,0,12"/>

                <!-- Tag Stats -->
                <StackPanel Grid.Row="3">
                    <TextBlock Text="Tag Stats" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="No clips yet." Foreground="#B8B8B8" FontSize="12" Margin="0,6,0,0"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- =======================
             LEFT BOTTOM : Controls
        ======================== -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Card}" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Controls" Style="{StaticResource HeaderText}"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,0">
                    <Button Content="Play" Click="Play_Click"/>
                    <Button Content="Pause" Click="Pause_Click"/>
                    <Button Content="Stop" Click="Stop_Click"/>
                    <Button Content="-0.5s" Click="Minus05_Click"/>
                    <Button Content="+0.5s" Click="Plus05_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- =======================
             RIGHT BOTTOM : Tags (dummy)
        ======================== -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}" Margin="12,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tags" Style="{StaticResource HeaderText}"/>

                    <Button Grid.Column="1" Content="Preferences..." Click="Preferences_Click" Margin="0"/>
                </Grid>

                <TextBlock x:Name="TagsVideoPathText"
                           Grid.Row="1"
                           Foreground="#CFCFCF"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextTrimming="CharacterEllipsis"/>

                <Border Grid.Row="2"
                        Background="#202020"
                        CornerRadius="10"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        Margin="0,12,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
