<UserControl x:Class="PlayCutWin.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BgWindow}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- 左上 : Video (16:9)    -->
        <!-- ===================== -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelBorder}" Margin="0,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Video (16:9)" Style="{StaticResource H1}" />

                <!-- Team A / Team B -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Team A" Style="{StaticResource Small}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TeamAName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TeamTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Team B" Style="{StaticResource Small}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TeamBName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TeamTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Player -->
                <Border Grid.Row="2" Style="{StaticResource InnerBorder}">
                    <Grid>
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="Player_MediaOpened"
                                      MediaFailed="Player_MediaFailed"/>

                        <TextBlock x:Name="PlayerHint"
                                   Text="Load video from the button →"
                                   Style="{StaticResource Body}"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.9"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===================== -->
        <!-- 右上 : Clips           -->
        <!-- ===================== -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PanelBorder}" Margin="10,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Clips (Total 0)" Style="{StaticResource H1}" VerticalAlignment="Center"/>

                    <!-- Macの All Clips っぽい -->
                    <ComboBox Grid.Column="1"
                              Width="140"
                              Height="{DynamicResource BtnH}"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"
                              SelectedIndex="0">
                        <ComboBoxItem Content="All Clips"/>
                    </ComboBox>

                    <Button Grid.Column="2" Content="Import CSV" Style="{StaticResource TopButton}" Click="ImportCsv_Click"/>
                    <Button Grid.Column="3" Content="Export CSV" Style="{StaticResource TopButton}" Click="ExportCsv_Click"/>
                    <Button Grid.Column="4" Content="Export All" Style="{StaticResource TopButton}" Click="ExportAll_Click"/>
                </Grid>

                <!-- Load video button line -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ClipsSubHeaderText}"
                               Style="{StaticResource Small}"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Load Video"
                            Style="{StaticResource AccentButton}"
                            Click="LoadVideo_Click"/>
                </Grid>

                <!-- Clips area -->
                <Border Grid.Row="2" Style="{StaticResource InnerBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Team A Clips (0)" Style="{StaticResource H2}"/>
                            <TextBlock Text="No clips for Team A with current filter." Style="{StaticResource Small}" Margin="0,6,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="{DynamicResource Border}" Margin="12,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Team B Clips (0)" Style="{StaticResource H2}"/>
                            <TextBlock Text="No clips for Team B with current filter." Style="{StaticResource Small}" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tag Stats (placeholder) -->
                <TextBlock Grid.Row="3"
                           Text="Tag Stats: No clips yet."
                           Style="{StaticResource Small}"
                           Margin="2,10,0,0"/>
            </Grid>
        </Border>

        <!-- ===================== -->
        <!-- 左下 : Controls (Mac)  -->
        <!-- ===================== -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource PanelBorder}" Margin="0,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Controls" Style="{StaticResource H1}" />

                <!-- Playback Speed -->
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <TextBlock Text="Playback Speed" Style="{StaticResource Small}" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="0.25x" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Speed025_Click"/>
                        <Button Content="0.5x"  Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Speed05_Click"/>
                        <Button Content="1x"    Style="{StaticResource AccentButton}" Margin="0,0,8,0" Click="Speed1_Click"/>
                        <Button Content="2x"    Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="Speed2_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Seek / Play -->
                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="-5s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekMinus5_Click"/>
                        <Button Content="-1s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekMinus1_Click"/>

                        <!-- ▶ / ⏸ トグル -->
                        <Button Content="{Binding PlayPauseGlyph}"
                                Style="{StaticResource AccentButton}"
                                Margin="0,0,8,0"
                                MinWidth="72"
                                Click="PlayPause_Click"/>

                        <Button Content="+1s" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SeekPlus1_Click"/>
                        <Button Content="+5s" Style="{StaticResource TopButton}" Margin="0,0,16,0" Click="SeekPlus5_Click"/>

                        <TextBlock Text="{Binding TimeText}"
                                   Style="{StaticResource H1}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Clip Range -->
                <StackPanel Grid.Row="3" Margin="0,14,0,0">
                    <TextBlock Text="Clip Range" Style="{StaticResource Small}" Margin="0,0,0,6"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Clip START" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SetStart_Click"/>
                        <Button Grid.Column="1" Content="Clip END"   Style="{StaticResource TopButton}" Margin="0,0,16,0" Click="SetEnd_Click"/>

                        <Button Grid.Column="2" Content="Save Team A" Style="{StaticResource TopButton}" Margin="0,0,8,0" Click="SaveTeamA_Click"/>
                        <Button Grid.Column="3" Content="Save Team B" Style="{StaticResource TopButton}" Margin="0,0,16,0" Click="SaveTeamB_Click"/>

                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ClipStartText}" Style="{StaticResource Small}" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ClipEndText}" Style="{StaticResource Small}" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource Small}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===================== -->
        <!-- 右下 : Tags (Mac寄せ)  -->
        <!-- ===================== -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelBorder}" Margin="10,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tags" Style="{StaticResource H1}"/>
                    <Button Grid.Column="1" Content="Preferences..." Style="{StaticResource TopButton}" Click="Preferences_Click"/>
                </Grid>

                <!-- Offense -->
                <TextBlock Grid.Row="1" Text="Offense Tags" Style="{StaticResource Small}" Margin="0,10,0,6"/>
                <ItemsControl Grid.Row="2" ItemsSource="{Binding OffensePresetTags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Style="{StaticResource TopButton}"
                                    Margin="0,0,8,8"
                                    MinWidth="120"
                                    Click="PresetTag_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Defense -->
                <TextBlock Grid.Row="3" Text="Defense Tags" Style="{StaticResource Small}" Margin="0,6,0,6"/>
                <ItemsControl Grid.Row="4" ItemsSource="{Binding DefensePresetTags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Style="{StaticResource TopButton}"
                                    Margin="0,0,8,8"
                                    MinWidth="120"
                                    Click="PresetTag_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Custom + Current Tags -->
                <Border Grid.Row="5" Style="{StaticResource InnerBorder}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Custom Tag" Style="{StaticResource Small}" Margin="0,0,0,6"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TagInput"
                                     Grid.Column="0"
                                     Height="{DynamicResource BtnH}"
                                     FontSize="{DynamicResource FontBody}"
                                     Foreground="{DynamicResource Text1}"
                                     Background="#141414"
                                     BorderBrush="{DynamicResource Border}"
                                     BorderThickness="1"
                                     Padding="10,2"
                                     VerticalContentAlignment="Center"
                                     KeyDown="TagInput_KeyDown"/>

                            <Button Grid.Column="1" Content="Add" Style="{StaticResource TopButton}" Click="AddTag_Click"/>
                            <Button Grid.Column="2" Content="Clear" Style="{StaticResource TopButton}" Click="ClearTags_Click"/>
                        </Grid>

                        <ListBox Grid.Row="2"
                                 ItemsSource="{Binding Tags}"
                                 Background="Transparent"
                                 Foreground="{DynamicResource Text1}"
                                 BorderThickness="0"
                                 Margin="0,10,0,0"
                                 MouseDoubleClick="TagsList_DoubleClick"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>
