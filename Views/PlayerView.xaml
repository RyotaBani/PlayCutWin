<UserControl x:Class="PlayCutWin.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black">

    <Grid Margin="10">
        <Border Background="Black"
                CornerRadius="6"
                BorderBrush="#333"
                BorderThickness="1">

            <Grid>
                <!-- 実プレイヤー -->
                <MediaElement x:Name="Player"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Manual"
                              Stretch="Uniform"
                              MediaOpened="Player_MediaOpened"
                              MediaFailed="Player_MediaFailed"/>

                <!-- 何も選択されていない時の表示 -->
                <TextBlock x:Name="EmptyText"
                           Text="No video selected"
                           Foreground="#777"
                           FontSize="24"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>

                <!-- 右下の時間表示 -->
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="10"
                        Background="#66000000"
                        CornerRadius="6"
                        Padding="10"
                        IsHitTestVisible="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PlaybackPositionText}"
                                   Foreground="#EEE"
                                   FontSize="14"/>
                        <TextBlock Text=" / "
                                   Foreground="#AAA"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding PlaybackDurationText}"
                                   Foreground="#AAA"
                                   FontSize="14"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
