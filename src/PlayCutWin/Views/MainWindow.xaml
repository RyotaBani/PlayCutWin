<Window x:Class="PlayCutWin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:vm="clr-namespace:PlayCutWin.ViewModels"
        mc:Ignorable="d"
        Title="PlayCutWin" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="{StaticResource AppPadding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Player -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                <Button Content="動画読み込み" Command="{Binding LoadVideoCommand}" />
                <Separator Width="12" Opacity="0"/>
                <Button Content="再生/停止" Command="{Binding PlayPauseCommand}" />
                <ComboBox Width="100" Margin="8,0,0,0"
                          ItemsSource="{Binding Rates}"
                          SelectedItem="{Binding SelectedRate}"/>
                <Separator Width="12" Opacity="0"/>
                <TextBlock Text="Team" Margin="8,0,0,0"/>
                <Button Content="A" Command="{Binding SetTeamACommand}" />
                <Button Content="B" Command="{Binding SetTeamBCommand}" />
                <Separator Width="12" Opacity="0"/>
                <Button Content="START" Command="{Binding MarkStartCommand}" />
                <Button Content="END" Command="{Binding MarkEndCommand}" />
                <TextBlock Text="{Binding PendingStartSeconds, StringFormat=Start: {0:0.00}s}" Margin="12,0,0,0"/>
            </DockPanel>

            <Border Grid.Row="1" CornerRadius="8" BorderThickness="1" BorderBrush="#DDDDDD">
                <vlc:VideoView x:Name="VideoView" />
            </Border>

            <TextBlock Grid.Row="2" Margin="0,8,0,0" Opacity="0.8"
                       Text="Tips: クリップをダブルクリックでジャンプ＆再生 / CSV Import・Export対応"/>
        </Grid>

        <!-- RIGHT: Clips + Tags -->
        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Clips" Grid.Row="0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Jump" Command="{Binding JumpToSelectedCommand}" />
                        <Button Content="Remove" Command="{Binding RemoveSelectedClipCommand}" />
                        <Separator Width="12" Opacity="0"/>
                        <Button Content="CSV Export" Command="{Binding ExportCsvCommand}" />
                        <Button Content="CSV Import" Command="{Binding ImportCsvCommand}" />
                    </StackPanel>

                    <ListView ItemsSource="{Binding Clips}"
                              SelectedItem="{Binding SelectedClip}"
                              MouseDoubleClick="ClipsList_MouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,0,0,6" CornerRadius="8" BorderThickness="1" BorderBrush="#EEEEEE">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding TeamDisplay}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding TimeRangeDisplay}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding TagsDisplay}" Opacity="0.8" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="Tags" Grid.Row="1" Margin="0,12,0,0">
                <TabControl>
                    <TabItem Header="Offense">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding OffenseTags}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}"
                                                Command="{Binding DataContext.AddTagCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Defense">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding DefenseTags}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}"
                                                Command="{Binding DataContext.AddTagCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
