<Application x:Class="PlayCutWin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ===== Color / Brush ===== -->
        <SolidColorBrush x:Key="PanelBg" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="BtnBg" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="BtnBorder" Color="#444444"/>
        <SolidColorBrush x:Key="Accent" Color="#2D74DA"/>

        <!-- ===== Typography ===== -->
        <Style x:Key="Body" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="Small" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>

        <Style x:Key="SubLabel" TargetType="TextBlock" BasedOn="{StaticResource Small}">
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- ===== Panels ===== -->
        <Style x:Key="Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="InnerBorder" TargetType="Border">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="PanelHeader" TargetType="TextBlock" BasedOn="{StaticResource H2}">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- ===== Buttons ===== -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#5A5A5A"/>
                    <Setter Property="Background" Value="#303030"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Margin" Value="6,6,0,0"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A86FF"/>
                    <Setter Property="BorderBrush" Value="#3A86FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ===== Toggle Buttons (Tags) ===== -->
        <Style x:Key="TagToggleBase" TargetType="ToggleButton">
            <Setter Property="Background" Value="#191919"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#232323"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OffenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="#2D74DA"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderBrush" Value="#2D74DA"/>
                    <Setter Property="Background" Value="#1D2A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DefenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="#D64A4A"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderBrush" Value="#D64A4A"/>
                    <Setter Property="Background" Value="#3A1D1D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ===== TextBox ===== -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="#EAEAEA"/>
        </Style>

        <Style x:Key="TeamTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="MinWidth" Value="170"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>

        <Style x:Key="WatermarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="Opacity" Value="0.95"/>
        </Style>

        <!-- ===== ListView ===== -->
        <Style x:Key="DarkListView" TargetType="ListView">
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Application.Resources>
</Application>
