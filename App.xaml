<Application x:Class="PlayCutWin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ====== TUNING (ここだけ触れば全体が変わる) ====== -->
        <sys:Double x:Key="FontH1">16</sys:Double>
        <sys:Double x:Key="FontH2">13</sys:Double>
        <sys:Double x:Key="FontBody">12</sys:Double>
        <sys:Double x:Key="FontSmall">11</sys:Double>

        <sys:Double x:Key="Corner">12</sys:Double>
        <Thickness x:Key="Gap">10</Thickness>
        <Thickness x:Key="PanelPad">14</Thickness>

        <sys:Double x:Key="BtnH">28</sys:Double>
        <sys:Double x:Key="BtnMinW">96</sys:Double>
        <Thickness x:Key="BtnPad">12,0</Thickness>

        <sys:Double x:Key="TeamBoxH">26</sys:Double>
        <Thickness x:Key="TeamBoxPad">10,2</Thickness>

        <!-- ====== COLORS ====== -->
        <SolidColorBrush x:Key="BgWindow" Color="#101010"/>
        <SolidColorBrush x:Key="BgPanel"  Color="#171717"/>
        <SolidColorBrush x:Key="BgInner"  Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Border"   Color="#2A2A2A"/>
        <SolidColorBrush x:Key="Border2"  Color="#3A3A3A"/>
        <SolidColorBrush x:Key="Text1"    Color="#EDEDED"/>
        <SolidColorBrush x:Key="Text2"    Color="#D0D0D0"/>
        <SolidColorBrush x:Key="Text3"    Color="#BFBFBF"/>
        <SolidColorBrush x:Key="Accent"   Color="#2F6FED"/>

        <!-- ====== BASE ====== -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{DynamicResource BgWindow}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text1}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontBody}"/>
        </Style>

        <!-- ====== TEXT STYLES ====== -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontH1}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Text1}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontH2}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Text2}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="Body" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontBody}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text2}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="Small" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSmall}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text3}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- ====== PANEL (カード) ====== -->
        <Style x:Key="PanelBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource Corner}"/>
            <Setter Property="Padding" Value="{DynamicResource PanelPad}"/>
        </Style>

        <Style x:Key="InnerBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BgInner}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource Corner}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- ====== BUTTONS（安全：Templateいじらない） ====== -->
        <Style x:Key="TopButton" TargetType="Button">
            <Setter Property="Height" Value="{DynamicResource BtnH}"/>
            <Setter Property="MinWidth" Value="{DynamicResource BtnMinW}"/>
            <Setter Property="Padding" Value="{DynamicResource BtnPad}"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontSize" Value="{DynamicResource FontBody}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text1}"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border2}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource TopButton}">
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
        </Style>

        <!-- ====== TEXTBOX (Team A/B) ====== -->
        <Style x:Key="TeamTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="{DynamicResource TeamBoxH}"/>
            <Setter Property="Padding" Value="{DynamicResource TeamBoxPad}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSmall}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text1}"/>
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Application.Resources>
</Application>
