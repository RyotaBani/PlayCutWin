<Application x:Class="PlayCutWin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework">
    <Application.Resources>

        <!-- =========================
             Base Colors / Brushes
             ========================= -->
        <SolidColorBrush x:Key="Bg0" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="PanelBg" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="Accent" Color="#2D6CDF"/>
        <SolidColorBrush x:Key="BtnBg" Color="#333333"/>
        <SolidColorBrush x:Key="BtnBorder" Color="#444444"/>

        <!-- =========================
             Typography
             ========================= -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource Bg0}"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="Small" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#BDBDBD"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- =========================
             Panels
             ========================= -->
        <Style x:Key="Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <!-- IMPORTANT: keep a reasonable default padding. A large value will collapse layouts (caused empty UI). -->
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="PanelBorder" TargetType="Border" BasedOn="{StaticResource Panel}">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- =========================
             Buttons
             ========================= -->
        <!--
          Keep this style strictly for Button.
          Using ButtonBase here can cause runtime XAML parse issues if the style is
          applied to other ButtonBase-derived controls (e.g., ToggleButton) while the
          template is designed for Button.
        -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F1F1F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PlayerControlsView で使う（サイズを揃えた上段ボタン） -->
        <Style x:Key="TopButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>

        <!-- =========================
             Inputs
             ========================= -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#454545"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- ComboBox Template（MainWindow から移管） -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"/>

                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                            <ToggleButton x:Name="ToggleButton"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                <Grid>
                                    <Path Fill="#EAEAEA" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="#202020" BorderBrush="#333333" BorderThickness="1" CornerRadius="6" Padding="2">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#EAEAEA"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd" Background="Transparent" CornerRadius="6">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#1A2233"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- =========================
             ListView (dark)
             ========================= -->
        <Style x:Key="DarkListView" TargetType="ListView">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        
        <!-- =========================
             GridView headers / ListView items (Mac-like)
             ========================= -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#2E2E2E"/>
            <Setter Property="Foreground" Value="#DADADA"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- List selection: avoid solid "blue fill". macOS-like subtle highlight + outline -->
        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2E"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2D2D31"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3A3A3C"/>
                            </Trigger>
                            <!-- keep the same subtle selection when focused/unfocused -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid selection: macOS-like subtle highlight (avoid solid blue fill) -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="Transparent"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2E"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2D2D31"/>
                    <Setter Property="BorderBrush" Value="#3A3A3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

<!-- =========================
             Tag Toggles
             ========================= -->
        <!--
          Tag chips (Mac-like): keep readable by avoiding full solid fills.
          - Unchecked: dark chip with colored outline
          - Checked: slightly tinted fill + brighter outline
        -->
        <SolidColorBrush x:Key="TagChipBg" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="TagChipBgCheckedOffense" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="TagChipBgCheckedDefense" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="TagChipOffenseBorder" Color="#7A2A2A"/>
        <SolidColorBrush x:Key="TagChipDefenseBorder" Color="#2A4A7A"/>
        <SolidColorBrush x:Key="TagChipOffenseBorderHot" Color="#B34A4A"/>
        <SolidColorBrush x:Key="TagChipDefenseBorderHot" Color="#4A7AB3"/>

        <Style x:Key="TagToggleBase" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource TagChipBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="6,6,0,0"/>
            <Setter Property="MinWidth" Value="84"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!-- remove the dotted focus rectangle like macOS chips -->
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OffenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="{StaticResource TagChipOffenseBorder}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource TagChipOffenseBorderHot}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource TagChipBg}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource TagChipOffenseBorderHot}"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DefenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="{StaticResource TagChipDefenseBorder}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource TagChipDefenseBorderHot}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource TagChipBg}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource TagChipDefenseBorderHot}"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- =========================
             PlayerView styles (旧 UserControl.Resources)
             ========================= -->
        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SubLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#BDBDBD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#E6E6E6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>

        <Style x:Key="WatermarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>

                            <TextBlock x:Name="WatermarkText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#8A8A8A"
                                       Margin="{TemplateBinding Padding}"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Opacity="1"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}}" Value="0">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}}" Value="1">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="BorderBrush" Value="#4F86C6"/>
                                <Setter TargetName="WatermarkText" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
