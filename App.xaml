<Application x:Class="PlayCutWin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>

        <!-- =========================
             Colors / Brushes (stable)
             ========================= -->
        <SolidColorBrush x:Key="Bg0" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBg" Color="#1B1B1B"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#2E2E2E"/>

        <SolidColorBrush x:Key="Text1" Color="#EAEAEA"/>
        <SolidColorBrush x:Key="Text2" Color="#B8B8B8"/>

        <SolidColorBrush x:Key="Accent" Color="#3AA6FF"/>
        <SolidColorBrush x:Key="TeamAAccent" Color="#3AA6FF"/>
        <SolidColorBrush x:Key="TeamBAccent" Color="#FF4D6D"/>

        <SolidColorBrush x:Key="ClipRowHover" Color="#232323"/>
        <SolidColorBrush x:Key="ClipRowSelected" Color="#2A2E35"/>

        <SolidColorBrush x:Key="BtnBg" Color="#242424"/>
        <SolidColorBrush x:Key="BtnBgHover" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="BtnBorder" Color="#333333"/>

        <!-- =========================
             Typography
             ========================= -->
        <Style x:Key="Body" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="Small" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
        </Style>

        <Style x:Key="SubLabel" TargetType="TextBlock" BasedOn="{StaticResource Small}">
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- =========================
             Window
             ========================= -->
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource Bg0}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- =========================
             Panels
             ========================= -->
        <Style x:Key="Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="PanelBorder" TargetType="Border" BasedOn="{StaticResource Panel}">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="PanelHeader" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <Style x:Key="InnerBorder" TargetType="Border">
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- =========================
             Buttons (NO ControlTemplate to avoid XamlParseException)
             ========================= -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BtnBgHover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <!-- =========================
             Toggle Buttons (Tag)
             ========================= -->
        <Style x:Key="TagToggleBase" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BtnBgHover}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OffenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="#3AA6FF"/>
        </Style>

        <Style x:Key="DefenseTagToggle" TargetType="ToggleButton" BasedOn="{StaticResource TagToggleBase}">
            <Setter Property="BorderBrush" Value="#FF4D6D"/>
        </Style>

        <!-- =========================
             TextBox
             ========================= -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style x:Key="TeamTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="WatermarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- =========================
             ListView
             ========================= -->
        <Style x:Key="DarkListView" TargetType="ListView">
            <Setter Property="Background" Value="{StaticResource PanelBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- =========================
             ListViewItem (Clip Row)
             - No custom ControlTemplate
             - Just setters/triggers (startup-stable)
             ========================= -->
        <Style x:Key="ClipRowBase" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ClipRowHover}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource ClipRowSelected}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TeamAClipRow" TargetType="ListViewItem" BasedOn="{StaticResource ClipRowBase}">
            <Setter Property="BorderBrush" Value="{StaticResource TeamAAccent}"/>
        </Style>

        <Style x:Key="TeamBClipRow" TargetType="ListViewItem" BasedOn="{StaticResource ClipRowBase}">
            <Setter Property="BorderBrush" Value="{StaticResource TeamBAccent}"/>
        </Style>

    </Application.Resources>
</Application>
